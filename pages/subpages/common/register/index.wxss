.register-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
}
.bg {
  position: absolute;
  width: 100%;
  bottom: 0;
}
.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.content-wrap {
  padding: 0 50rpx;
}
.logo {
  margin-left: 54rpx;
  width: 108rpx;
  height: 88rpx;
}
.title {
  color: #000;
  font-size: 68rpx;
  font-weight: 550;
}
.sub-title {
  margin-top: 24rpx;
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
}
.tips {
  margin-top: 8rpx;
  color: #666;
  font-size: 26rpx;
  font-weight: 300;
}

.register-btn-wrap {
  position: absolute;
  left: 0;
  bottom: 300rpx;
  flex-direction: column;
  width: 100%;
}
.register-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 0;
  width: 656rpx;
  height: 106rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  background: var(--blue-1);
  border-radius: 32rpx;
}
.arrow {
  margin-left: 12rpx;
  width: 22rpx;
  height: 22rpx;
}
.agreement-tips {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}
.checkbox {
  margin-right: 12rpx;
  width: 30rpx;
  height: 30rpx;
}

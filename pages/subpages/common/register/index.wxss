.login-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
}
.bg {
  position: absolute;
  width: 100%;
  bottom: 0;
}
.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.content-wrap {
  padding: 0 50rpx;
}
.title {
  color: #333;
  font-size: 68rpx;
  font-weight: bolder;
  /* font-family: Verdana; */
}
.sub-title {
  color: #666;
  font-size: 34rpx;
  font-weight: bold;
  /* font-family: Verdana; */
}
.tips {
  margin-top: 0.6rem;
  color: #999;
  font-size: 26rpx;
}
.register-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 0;
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: #0095fa;
  border-radius: 10rpx;
}
.arrow {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.agreement-tips {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.auth-modal {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  z-index: 100;
}
.modal-main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 50rpx;
  width: 670rpx;
  border-radius: 30rpx;
  background: #fff;
}
.model-title {
  color: #333;
  font-size: 32rpx;
}
.modal-tips {
  position: relative;
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.modal-form {
  margin-top: 50rpx;
}
.form-item {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1px solid #f5f5f5;
}
.form-item:first-child {
  border-top: 1px solid #f5f5f5;
}
.label {
  margin-right: 30rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.avatar-wrapper {
  flex: 1;
  height: 100rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.more-icon {
  width: 24rpx;
  height: 24rpx;
}
.nickname-input {
  flex: 1;
  font-size: 28rpx;
}

.save-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx auto 0;
  width: 464rpx;
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  background: #0095fa;
}

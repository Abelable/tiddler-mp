.login-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
}
.bg {
  position: absolute;
  width: 100%;
  bottom: 0;
}
.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.content-wrap {
  padding: 0 50rpx;
}
.title {
  color: #333;
  font-size: 68rpx;
  font-weight: bolder;
  /* font-family: Verdana; */
}
.sub-title {
  color: #666;
  font-size: 34rpx;
  font-weight: bold;
  /* font-family: Verdana; */
}
.tips {
  margin-top: 0.6rem;
  color: #999;
  font-size: 26rpx;
}
.register-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 80rpx;
  margin-left: 0;
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: #0095fa;
  border-radius: 10rpx;
}
.arrow {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.agreement-tips {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}
.checkbox {
  transform: scale(0.6);
}

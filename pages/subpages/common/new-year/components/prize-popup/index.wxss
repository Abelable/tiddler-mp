.prize-popup-main {
  background: linear-gradient(180deg, #eecaff 0%, #fff 50%, #fff 100%);
}

.title-wrap {
  padding: 32rpx;
  padding-bottom: 24rpx;
  font-size: 0;
}
.prize-popup-title {
  width: 148rpx;
}

.prize-list-wrap {
  height: 988rpx;
}
.prize-list {
  margin: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom));
}
.prize {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
  box-shadow: 0px 1px 12px 0px rgba(61, 9, 154, 0.1);
  border-radius: 32rpx;
  overflow: hidden;
}

.prize-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 16rpx;
}

.prize-info {
  margin-left: 24rpx;
  flex: 1;
}
.prize-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.prize-time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.prize-bth {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  background: linear-gradient(90deg, #996cfe 0%, #441aef 100%);
  border-radius: 32rpx;
}

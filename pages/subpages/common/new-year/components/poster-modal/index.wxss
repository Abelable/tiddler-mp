.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.poster {
  position: absolute;
  top: calc((100vh - 140rpx) / 2);
  left: 50%;
  transform: translate(-50%, -50%);
  width: 320px;
  height: 510px;
}

.btns {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  padding: 0 56rpx;
  width: 100%;
  height: 260rpx;
  background: #fff;
  border-radius: 44rpx 44rpx 0 0;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 22rpx;
  font-weight: normal;
}
.btn-icon {
  margin-bottom: 18rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.close-icon {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  width: 40rpx;
  height: 40rpx;
}

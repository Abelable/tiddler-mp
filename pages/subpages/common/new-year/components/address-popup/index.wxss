.row {
  display: flex;
  align-items: center;
}
.row.between {
  justify-content: space-between;
}

.address-select-popup {
  padding: 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, #eecaff 0%, #fff 50%, #fff 100%);
}

.title {
  width: 148rpx;
}
.add-btn {
  width: 80rpx;
  color: #3d099a;
  font-size: 28rpx;
}

.address-list {
  margin-top: 32rpx;
  height: 680rpx;
  overflow-y: scroll;
}
.address-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
  box-shadow: 0px 1px 12px 0px rgba(61, 9, 154, 0.1);
  border-radius: 32rpx;
  overflow: hidden;
}
.address-icon {
  width: 36rpx; 
  height: 36rpx;
}
.content {
  margin: 0 24rpx;
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.user-name {
  margin-right: 20rpx; 
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.default-icon {
  margin-left: 24rpx;
  padding: 6rpx 8rpx;
  color: var(--blue-1);
  font-size: 20rpx;
  line-height: 1;
  border-radius: 8rpx;
  border: 1px solid var(--blue-1);
}
.address-detail {
  margin-top: 16rpx;
  color: #333;
  font-size: 26rpx;
}
.radio {
  transform: scale(0.8);
}

.confirm-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  background: linear-gradient(90deg, #996cfe 0%, #441aef 100%);
}

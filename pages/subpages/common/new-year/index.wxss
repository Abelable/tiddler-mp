.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  height: 44px;
  padding-left: 8px;
  padding-right: 40px;
}
.nav-bar-title {
  display: flex;
  justify-content: center;
  flex: 1;
}
.title-img {
  width: 200rpx;
  height: 41rpx;
}

.bg-wrap {
  position: relative;
  z-index: -1;
}
.bg-wrap .bg {
  width: 750rpx;
  height: 1008rpx;
}
.count-down-wrap {
  position: absolute;
  bottom: 128rpx;
  left: 50%;
  transform: translateX(-50%);
}
.count-down-tips {
  display: block;
  margin: 0 auto;
  width: 320rpx;
  height: 48rpx;
}
.count-down {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
}
.count-down-unit {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.time {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 88rpx;
  height: 100rpx;
  font-size: 48rpx;
  font-weight: bold;
  font-family: "DIN Alternate", "DIN", "Helvetica Neue", Arial, sans-serif;
  font-variant-numeric: tabular-nums;
  color: #ffdcad;
  background: #c71a20;
  border-radius: 36rpx;
  border: 1px solid #ffdcad;
}
.desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #160a8c;
}
.split {
  display: flex;
  align-items: center;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 1;
  color: #ffdcad;
}

.container {
  margin-top: -100rpx;
  padding-bottom: 48rpx;
  background: linear-gradient(
    180deg,
    rgba(233, 214, 249, 0.5) 0%,
    rgba(233, 214, 249, 1) 60rpx,
    rgba(233, 214, 249, 1) 100%
  );
  border-radius: 80rpx 80rpx 0 0;
}

.luck-draw {
  padding: 32rpx;
}
.luck-score-wrap {
  display: flex;
  justify-content: space-between;
  padding-top: 12rpx;
  padding-left: 24rpx;
  padding-right: 12rpx;
}
.luck-score {
  display: flex;
  flex-direction: column;
}
.luck-score-tips {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #3d099a;
}
.tips-arrow {
  width: 22rpx;
  height: 22rpx;
}
.luck-score-value {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 48rpx;
  font-weight: bolder;
  color: #3d099a;
}
.luck-bag {
  margin-right: 8rpx;
  width: 48rpx;
  height: 48rpx;
}
.activity-time {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #a689d5;
}
.luck-btn {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  background: linear-gradient(90deg, #996cfe 0%, #441aef 100%);
  border-radius: 40rpx;
}

/* 抽奖转盘 */
.draw-wheel {
  position: relative;
  margin-top: 48rpx;
  padding-top: 70rpx;
  width: 100%;
  height: 468rpx;
}
.draw-wheel::before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  aspect-ratio: 2163 / 1752;
  background: url("https://static.tiddler.cn/mp/new_year/draw_wheel_bg.webp") no-repeat left bottom;
  background-size: 100% auto;
}

/* 奖品列表 */
.prize-viewport {
  margin: 0 auto;
  width: calc(100% - 8rpx);
  overflow: hidden;
  padding-top: 40rpx;
  box-sizing: border-box;
  border-top-right-radius: 68rpx;
}
.prize-track {
  display: inline-flex;
  flex-direction: row;
  align-items: flex-start;
  will-change: transform;
  box-sizing: border-box;
  contain: layout paint;
}
.prize {
  position: relative;
  flex-shrink: 0;
  margin-right: 18rpx;
  padding: 8rpx;
  width: 160rpx;
  height: 200rpx;
  font-size: 0;
  background: #ffffff;
  border-radius: 28rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.prize.big {
  width: 240rpx;
}
.prize-cover {
  width: 100%;
  height: 140rpx;
  border-radius: 22rpx;
  object-fit: cover;
}
.prize-name {
  margin-top: 16rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #420f9d;
  text-align: center;
  line-height: 1.2;
}
.prize-name.big {
  color: #ff197d;
}
.big-prize-tag {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 36rpx;
  font-size: 18rpx;
  color: #ffffff;
  background: linear-gradient(90deg, #ff48d0 0%, #fd2b81 100%);
  border-bottom-right-radius: 18rpx;
  box-sizing: border-box;
}

/* 抽奖按钮 */
.draw-btn {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  padding-top: 16rpx;
  width: 241rpx;
  height: 103rpx;
  line-height: 103rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  border-radius: 51rpx;
  z-index: 1;
  transform: translateX(-50%);
}
.draw-btn-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 258rpx;
  height: 212rpx;
  transform: translate(-50%, -50%) scale(1);
  transform-origin: center;
  transition: transform 0.2s ease, filter 0.15s ease;
  background: url("https://static.tiddler.cn/mp/new_year/draw_btn_bg.webp") no-repeat center center;
  background-size: cover;
  border-radius: 51rpx;
  z-index: -1;
  pointer-events: none;
}
.draw-btn.pressed .draw-btn-bg {
  transform: translate(-50%, -50%) scale(0.94);
  filter: brightness(1.1);
}
.draw-btn-text {
  display: inline-block;
  transition: transform 0.2s ease;
}
.draw-btn.pressed .draw-btn-text {
  transform: scale(0.94);
}

.my-prize-btn-wrap {
  position: absolute;
  right: 6rpx;
  bottom: 0;
  height: 112rpx;
  border-bottom-right-radius: 68rpx;
  overflow: hidden;
}
.my-prize-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 64rpx;
  padding-left: 20rpx;
  font-size: 20rpx;
  line-height: 1.1;
  font-weight: bold;
  color: #fff;
  background: url("https://static.tiddler.cn/mp/new_year/my_prize_btn_bg.webp") no-repeat center center;
  background-size: 100% 100%;
}

.luck-exchange {
  margin-top: 24rpx;
  background: #eec8ff;
  padding: 32rpx;
  border-radius: 48rpx;
  border-top: 1rpx solid #fff;
  border-bottom: 1rpx solid #fff;
}
.luck-exchange-title {
  width: 160rpx;
  display: block;
}
.goods-list {
  margin-top: 32rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}
.goods {
  width: calc((100% - 18rpx)/2);
  font-size: 0;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.goods-cover-wrap {
  position: relative;
  width: 100%;
  height: 320rpx;
  font-size: 0;
  border-radius: 32rpx;
  overflow: hidden;
}
.goods-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.goods-cover-decoration {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 18rpx;
  height: 180rpx;
}
.goods-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-exchange {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-need-luck {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6430;
}
.goods-exchange-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 48rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
  padding: 0 20rpx;
  background: linear-gradient(90deg, #ec7e62 0%, #ff483f 100%);
  border-radius: 24rpx;
}

/* 合作伙伴 partters */
.split-tips {
  font-size: 30rpx;
  font-weight: bold;
  color: #160a8c;
  position: relative;
  margin: 48rpx auto 0;
  width: fit-content;
}
.split-tips::before,
.split-tips::after {
  content: "";
  position: absolute;
  top: 50%;
  width: 80rpx;
  height: 0.5rpx;
  background: #160a8c;
  transform: translateY(-50%);
}
.split-tips::before {
  left: -100rpx;
}
.split-tips::after {
  right: -100rpx;
}
.partters {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 32rpx;
}
.partter {
  width: calc((100% - 48rpx)/3);
  height: 88rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
}
.partter-logo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.patter-settle-title {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #e8e8e8;
}

.share-btn {
  position: fixed;
  right: 0;
  display: flex;
  align-items: center;
  padding-left: 18rpx;
  padding-right: 8rpx;
  height: 58rpx;
  font-size: 24rpx;
  font-weight: bolder;
  line-height: 1;
  color: #ffdcad;
  background: #c71a20;
  border-radius: 36rpx 0 0 36rpx;
  border: 1px solid #ffdcad;
  border-right: none;
  z-index: 100;
}
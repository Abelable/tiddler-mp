.user-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 32rpx;
}
.avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
}
.user-info {
  margin: 0 24rpx;
  flex: 1;
}
.name {
  color: #000;
  font-size: 30rpx;
  line-height: 1;
  font-weight: 550;
}
.user-data {
  margin-top: 4rpx;
  color: #333;
  font-size: 20rpx;
  font-weight: 300;
}
.signature {
  margin-top: 8rpx;
  color: #999;
  font-size: 20rpx;
  font-weight: 300;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 50rpx;
  color: #333;
  font-size: 24rpx;
  font-weight: 500;
  background: #eee;
  border-radius: 18rpx;
}
.btn.active {
  color: #fff;
  background: #FE3666;
}

.note-item {
  margin-right: 16rpx;
  width: 316rpx;
}

.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 32rpx;
  overflow: hidden;
}
.cover {
  width: 316rpx;
  height: 423rpx;
}

.note-title {
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 10rpx;
  color: #fff;
  font-size: 20rpx;
  font-weight: 300;
}
.author-info {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
  flex: 1;
}
.author-avatar {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}
.author-name {
  flex: 1;
}
.praise-info {
  display: flex;
  align-items: center;
}
.praise-icon {
  margin-right: 6rpx;
  width: 26rpx;
  height: 26rpx;
}
page {
  background: #59A9D4;
}

.back-icon-wrap {
  position: fixed;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
  z-index: 100;
}

.header {
  position: relative;
}
.bg {
  width: 100%;
  height: 500rpx;
}
.title {
  position: absolute;
  left: 24rpx;
  bottom: 65rpx;
  width: 572rpx;
  height: 118rpx;
}

.content {
  padding: 0 32rpx 32rpx;
}
.sub-title {
  margin-top: 24rpx;
  width: 168rpx;
  height: 41rpx;
}

.island-list {
  margin-top: 32rpx;
}
.island-item {
  position: relative;
  margin-bottom: 32rpx;
  height: 440rpx;
  font-size: 0;
  border-radius: 48rpx;
  overflow: hidden;
}
.island-cover {
  width: 100%;
  height: 100%;
}
.island-name-wrap {
  position: absolute;
  top: 0;
  left: 0;
  padding: 32rpx;
  width: 100%;
  color: #fff;
  font-weight: 500;
  text-shadow: 0 0 1px #999;
}
.island-name {
  font-size: 38rpx;
}
.island-desc {
  font-size: 24rpx;
}
.island-info-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 32rpx;
  width: 100%;
  height: 120rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(8px);
}
.island-data-list {
  flex: 1;
}
.island-data {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1;
}
.island-data-unit {
  margin-left: 4rpx;
  font-size: 20rpx;
  font-weight: 400;
}
.island-data-desc {
  font-size: 20rpx;
}
.split-line {
  margin: 0 32rpx;
  font-size: 24rpx;
}
.arrow {
  width: 24rpx;
  height: 24rpx;
}
.nav-bar-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #151629;
  z-index: 100;
}
.nav-bar {
  padding: 0 8px;
  height: 44px;
}
.title {
  margin-left: 24rpx;
  width: 165rpx;
  height: 40rpx;
}

.header {
  position: relative;
  padding: 32rpx 0 56rpx;
  background: #151629;
  border-radius: 0 0 60rpx 60rpx;
}
.header::after {
  position: absolute;
  left: 0;
  bottom: -12rpx;
  width: 100%;
  height: 80rpx;
  content: "";
  background: #009dff;
  border-radius: 0 0 60rpx 60rpx;
  z-index: -1;
}

.trip-list {
  height: 611rpx;
}
.trip-item {
  position: relative;
  width: 390rpx;
  height: 611rpx;
  font-size: 0;
  border-radius: 48rpx;
  overflow: hidden;
  transform: scale(1);
  transition: transform 0.2s ease;
  will-change: transform;
}
.trip-item.unselect {
  transform: scale(0.84);
}
.trip-cover {
  width: 100%;
  height: 100%;
}

.trip-info {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  padding: 32rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(8px);
  clip-path: polygon(0 0%, 100% 20%, 100% 100%, 0% 100%);
}
.trip-name {
  font-size: 34rpx;
  font-weight: 600;
}
.trip-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
}
.trip-arrow {
  width: 24rpx;
  height: 24rpx;
}
.top-tag {
  position: absolute;
  right: 24rpx;
  bottom: 68rpx;
  width: 72rpx;
  height: 83rpx;
}

.current-dot-wrap {
  position: absolute;
  right: 48rpx;
  bottom: 48rpx;
}
.progress {
  position: relative;
  width: 126rpx;
  height: 10rpx;
  background: #ffffff;
  border-radius: 5rpx;
  overflow: hidden;
}
.progress-inner {
  position: relative;
  height: 10rpx;
  background: #009dff;
  border-radius: 5rpx;
}
.current-dot {
  margin-left: 12rpx;
  width: 20rpx;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
}

.sub-title {
  margin-top: 48rpx;
  margin-left: 32rpx;
  width: 148rpx;
  height: 37rpx;
}

.media-wrap {
  margin-top: 32rpx;
  padding: 0 20rpx;
}

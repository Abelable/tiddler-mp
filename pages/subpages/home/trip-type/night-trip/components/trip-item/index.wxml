<view class="trip-item" bindtap="checkDetail">
  <view class="header">
    <image class="bg" src="{{item.scenicCover}}" mode="aspectFill" />
    <view class="more-btn">
      <view>了解更多</view>
      <image class="arrow" src="https://static.tiddler.cn/mp/trip_type/night_trip/arrow.png" />
    </view>
    <view class="trip-name">{{item.scenicName}}</view>
  </view>

  <view class="feature-list">
    <view class="feature-item" wx:if="{{item.featureTips}}">
      <view class="feature-tag yellow">特色</view>
      <view class="feature-content">{{item.featureTips}}</view>
    </view>
    <view class="feature-item" wx:if="{{item.guideTips}}">
      <view class="feature-tag orange">攻略</view>
      <view class="feature-content">{{item.guideTips}}</view>
    </view>
    <view class="feature-item" wx:if="{{item.recommendTips}}">
      <view class="feature-tag red">推荐</view>
      <view class="feature-content">{{item.recommendTips}}</view>
    </view>
  </view>

  <scroll-view class="media-list-wrap" wx:if="{{mediaList.length}}" scroll-x>
    <view class="media-list">
      <media-item wx:for="{{mediaList}}" wx:key="index" item="{{item}}" />
    </view>
  </scroll-view>
</view>

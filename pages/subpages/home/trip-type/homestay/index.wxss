.back-icon-wrap {
  position: fixed;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
  z-index: 100;
}

.container {
  padding-top: 800rpx;
  background-color: #263454;
  background-image: url('https://static.tiddler.cn/mp/homestay/bg.png');
  background-size: 100%;
  background-repeat: no-repeat;
}
.recommend-item {
  display: flex;
  align-items: center;
}
.homestay-cover {
  width: 350rpx;
}
.homestay-info-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.homestay-name {
  color: #fff;
  font-size: 42rpx;
  font-weight: 500;
}
.homestay-position {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  color: #fff;
  font-size: 26rpx;
}
.position-icon {
  margin-right: 4rpx;
  width: 28rpx;
  height: 28rpx;
}
.homestay-price-info {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.homestay-rate {
  color: #fff;
  font-size: 26rpx;
}
.homestay-price-bar {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-left: 24rpx;
  padding-top: 6rpx;
  width: 224rpx;
  height: 60rpx;
  color: #000;
  font-size: 22rpx;
  background-image: url('https://static.tiddler.cn/mp/homestay/price_bar.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.homestay-price {
  font-size: 32rpx;
  font-weight: bold;
}
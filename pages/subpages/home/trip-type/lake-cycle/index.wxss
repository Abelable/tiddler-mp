  align-items: center;
  height: 34px;
  z-index: 100;
}

.title {
  margin: 0 auto;
  display: block;
  width: 680rpx;
  height: 300rpx;
}

.sub-title-1 {
  margin: 40rpx auto 0;
  display: block;
  width: 380rpx;
  height: 120rpx;
}

.route-tips {
  margin: 0 auto;
  display: block;
  width: 232rpx;
  height: 49rpx;
}

.menu-list {
  margin-top: 24rpx;
  padding: 0 24rpx;
  height: 100rpx;
}
.menu-item-1 {
  width: 277rpx;
  height: 80rpx;
}
.menu-item-1.active {
  height: 91rpx;
}
.menu-item-2 {
  width: 180rpx;
  height: 70rpx;
}

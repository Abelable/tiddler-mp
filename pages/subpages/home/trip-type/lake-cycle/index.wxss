  height: 74rpx;
}
.menu-item-3 {
  width: 188rpx;
  height: 70rpx;
}
.menu-item-3.active {
  height: 86rpx;
}

.route-wrap {
  height: 680rpx;
}
.route-1 {
  display: block;
  margin: 0 auto;
  width: 700rpx;
  height: 650rpx;
}
.route-2 {
  display: block;
  margin: 0 auto;
  width: 728rpx;
  height: 556rpx;
}
.route-3 {
  display: block;
  margin: 0 auto;
  width: 728rpx;
  height: 556rpx;
}

.sub-title-2 {
  margin: 0 auto;
  display: block;
  width: 496rpx;
  height: 92rpx;
}

.cycle-scenic-list {
  margin-top: 40rpx;
  height: 400rpx;
}
.cycle-scenic-item {
  position: relative;
  margin-bottom: 32rpx;
  width: calc(100vw - 100rpx); 
  height: 400rpx;
  font-size: 0;
  border-radius: 48rpx;
  overflow: hidden;
  transform: scale(1);
  transition: transform 0.2s ease;
  will-change: transform;
}
.cycle-scenic-item.unselect {
  transform: scale(0.92);
}
.cycle-scenic-cover {
  width: 100%;
  height: 100%;
}
.cycle-scenic-name-wrap {
  position: absolute;
  top: 0;
  left: 0;
  padding: 32rpx;
  width: 100%;
  color: #fff;
  font-weight: 500;
  text-shadow: 0 0 1px #999;
}
.cycle-scenic-name {
  font-size: 38rpx;
}
.cycle-scenic-desc {
  font-size: 24rpx;
}
.cycle-scenic-info-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 32rpx;
  width: 100%;
  height: 108rpx;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(8px);
}
.cycle-scenic-data-list {
  flex: 1;
}
.cycle-scenic-data {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1;
}
.cycle-scenic-data-unit {
  margin-left: 4rpx;
  font-size: 18rpx;
  font-weight: 400;
}
.cycle-scenic-data-desc {
  font-size: 18rpx;
}
.split-line {
  margin: 0 32rpx;
  font-size: 24rpx;
}
.arrow {
  width: 24rpx;
  height: 24rpx;
}

.sub-title-3 {
  margin: 100rpx auto 0;
  display: block;
  width: 483rpx;
  height: 140rpx;
}

.media-wrap {
  margin-top: 32rpx;
  padding: 0 20rpx;
}

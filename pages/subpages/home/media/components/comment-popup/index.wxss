.comment-popup {
  display: flex;
  flex-direction: column;
  height: 1100rpx;
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
}

.header {
  padding: 20rpx 30rpx 0 62rpx;
}
.title {
  flex: 1;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.comment-list {
  padding-top: 6rpx;
  flex: 1;
  overflow-y: scroll;
}
.comment-btn {
  margin-top: 24rpx;
  width: 140rpx;
  height: 56rpx;
  color: #fff;
  font-size: 24rpx;
  background: var(--blue-1);
  border-radius: 28rpx;
}
.nomore-tips {
  padding: 26rpx 30rpx 40rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.input-bar {
  padding: 20rpx 30rpx;
  border-top: 0.5px solid #E8E8E8;
}
.input-main {
  padding: 0 24rpx;
  height: 68rpx;
  color: #333;
  font-size: 26rpx;
  background: #F7F7F7;
  border-radius: 12rpx;
}

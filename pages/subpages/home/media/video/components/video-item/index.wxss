.video-item {
  position: relative;
  width: 100%;
  height: 100%;
  color: #fff;
  text-shadow: 0 0 1px #999;
}

.interactive-area {
  position: absolute;
  right: 8px;
  bottom: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.author-avatar {
  position: relative;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.follow-icon {
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
}

.btn {
  margin-top: 40rpx;
}
.btn-icon {
  width: 68rpx;
  height: 68rpx;
}
.btn-icon.share {
  width: 60rpx;
  height: 60rpx;
}
.btn-icon.more {
  margin-left: -10rpx;
  width: 62rpx;
  height: 62rpx;
}
.btn-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 33rpx;
  text-align: center;
}

.video-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 24rpx;
  width: 620rpx;
}

.author-name {
  margin-top: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 48rpx;
}
.address {
  display: flex;
  align-items: center;
  margin-top: 6rpx;
  font-size: 22rpx;
}
.address-icon {
  margin-right: 2rpx;
  width: 22rpx;
  height: 22rpx;
}
.video-title {
  margin-top: 16rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}

.commodity-list {
  margin-top: 24rpx;
  width: 100%;
  line-height: 1;
  overflow-x: scroll;
}
.commodity-item {
  display: inline-block;
  height: 100rpx;
  width: 280rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  border-radius: 12rpx;
}
.commodity-item-inner {
  padding: 12rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}
.comodity-icon {
  width: 36rpx;
  height: 36rpx;
}
.commodity-name {
  flex: 1;
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}
.commodity-data-wrap {
  margin-top: 12rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #fff;
  font-size: 20rpx;
  text-decoration: line-through;
}
.sales-volumns {
  color: #fff;
  font-size: 20rpx;
}

.pause-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90rpx;
  height: 100rpx;
}

.praise-heart {
  position: absolute;
  width: 80px;
  height: 80px;
  opacity: 0;
}
@keyframes float {
  0% {
    opacity: 1;
  }
  30% {
    opacity: 1;
  }
  100% {
    transform: scale(1.8) translateY(-60px);
    opacity: 0;
  }
}

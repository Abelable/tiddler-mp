.header {
  padding: 6px 12px;
  background: #fff;
  border-radius: 15px 15px 0 0;
}

.menu-wrap {
  padding: 0 6px;
  height: 40px;
}
.memu-item {
  margin-right: 24px;
  height: 40px;
  color: #999;
  font-size: 15px;
}
.memu-item.selected {
  position: relative;
  color: #333;
}
.memu-item.selected::after {
  position: absolute;
  left: 50%;
  bottom: 3px;
  transform: translateX(-50%);
  width: 100%;
  height: 3px;
  content: "";
  border-radius: 1.5px;
  background: #169dfe;
}

.multiple-switch {
  color: #333;
  font-size: 14px;
}

.goods-list-wrap {
  padding: 0 12px;
  height: 500px;
  max-height: calc(100vh - 50px - env(safe-area-inset-bottom));
  overflow-y: scroll;
}

.all-pick-bar {
  margin-top: 12px;
  padding: 0 15px;
  height: 36px;
  background: #fff;
  border-radius: 18px;
}
.select-icon {
  width: 16px;
  height: 16px;
}
.all-pick-title {
  margin-left: 12px;
  color: #333;
  font-size: 14px;
}
.all-pick-btn {
  padding-left: 8px;
  padding-right: 6px;
  height: 24px;
  color: #fff;
  font-size: 12px;
  line-height: 1;
  background: #169dfe;
  border-radius: 15px;
}
.all-pick-icon {
  margin-left: 3px;
  width: 16px;
  height: 16px;
}

.goods-list {
  margin-top: 12px;
}
.goods-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  padding: 15px;
  height: 126px;
  background: #FFFFFF;
  border-radius: 12px;
}
.goods-item .select-icon{
  margin-right: 12px;
}
.goods-img-wrap {
  position: relative;
  width: 96px;
  height: 96px;
  font-size: 0;
  border-radius: 10px;
  overflow: hidden;
}
.goods-img {
  width: 96px;
  height: 96px;
}

.goods-index {
  position: absolute;
  left: 0;
  top: 0;
  padding: 0 7px;
  height: 16px;
  color: #fff;
  font-size: 10px;
  line-height: 1;
  background: #000;
  border-radius: 10px 0px 6px 0px;
}
.goods-index.is-hot {
  background: linear-gradient(90deg, #f71854 0%, #ee5e84 100%);
}

.goods-info-wrap {
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  flex: 1;
  height: 96px;
}
.goods-name {
  color: #333;
  font-size: 14px;
}

.goods-stock {
  margin-top: 4px;
  flex: 1;
  color: #999;
  font-size: 12px;
}

.recommend-btn {
  padding: 0 10px;
  height: 24px;
  color: #fff;
  font-size: 12px;
  border-radius: 12px;
  background: linear-gradient(90deg, #f71854 0%, #ee5e84 100%);
}
.recommend-btn.invalid {
  color: #666;
  background: #E4E4E4;
}

.goods-pick-btn {
  box-sizing: content-box;
  margin-right: -8px;
  padding: 2px 8px;
  width: 20px;
  height: 20px;
}

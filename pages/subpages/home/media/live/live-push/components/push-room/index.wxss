.praise-animation-wrap {
  position: absolute;
  right: 0;
  bottom: calc(57px + env(safe-area-inset-bottom));
}
.praise-animation-wrap.horizontal {
  right: 22px;
}

.inner {
  position: absolute;
  left: 8px;
  right: 8px;
  bottom: calc(8px + env(safe-area-inset-bottom));
}
.inner.horizontal {
  left: 30px;
  right: 30px;
}

.nav-bar {
  position: absolute;
  width: 100%;
  height: 44px;
}
.close-icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
  border: 0.5px solid rgba(255,255,255,0.3);
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.start-btn {
  margin: 0 auto;
  width: 274px;
  height: 44px;
  color: #fff;
  font-size: 16px;
  background: var(--blue-1);
  border-radius: 22px;
}

.btns-wrap {
  margin-top: 8px;
}
.input-btn {
  padding-left: 10px;
  flex: 1;
  height: 35px;
  color: #fff;
  font-size: 13px;
  border-radius: 18px;
  background: rgba(0, 0, 0, 0.3);
}
.chat-icon {
  margin-right: 5px;
  width: 26px;
  height: 26px;
}
.feature-btn {
  position: relative;
  margin-left: 8px;
  width: 35px;
  height: 35px;
  overflow: initial;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}
.goods-icon {
  width: 23px;
  height: 23px;
}
.more-icon {
  width: 30px;
  height: 30px;
}
.share-icon {
  margin-right: 1px;
  width: 22px;
  height: 22px;
}
.praise-icon {
  margin-bottom: 1px;
  width: 24px;
  height: 24px;
}
.praise-icon.hover {
  animation: scaleDraw 1s ease-in-out; 
}
@keyframes scaleDraw{
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(0.9);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(0.9);
  }
}
.praise-count {
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  padding: 0 5px;
  font-size: 9px;
  color: #F94950;
  height: 14px;
  line-height: 14px;
  border-radius: 7px;
  background: #fff;
  white-space: nowrap;
}

/* 用户加入购物车，关注，下单 */
.audience-action-tips {
  display: flex;
  align-items: center;
  margin-bottom: 2.5px;
  padding: 0 8px;
  font-size: 13px;
  width: fit-content;
  height: 22px;
  border-radius: 4px;
  color: #fff;
  opacity: 0;
  transform: translateX(-100%);
  transition: .3s linear;
}
.audience-action-tips.coming {
  background: rgba(238, 55, 105, 0.6);
}
.audience-action-tips.follow {
  background: rgba(251,28,28,0.6);
}
.audience-action-tips.buy {
  background: rgba(114,0,251,0.6);
}
.audience-action-tips.cart {
  background: rgba(255,168,41,0.6);
}
.audience-action-tips.share {
  background: rgba(19,47,199,0.6);
}
.audience-action-tips.show {
  opacity: 1;
  transform: translateX(0);
  transition: .3s linear;
}

.anchor-capsule {
  margin-left: 8px;
  padding: 0 2px;
  max-width: 150px;
  height: 32px;
  border-radius: 16px;
  background-color: rgba(0, 0, 0, 0.2);
  border: 0.5px solid rgba(255, 255, 255, 0.2);
}

.anchor-avatar {
  width: 26px;
  height: 26px;
  border-radius: 50%;
}

.anchor-capsule-content {
  margin-left: 5px;
  margin-right: 10px;
  flex: 1;
  color: #fff;
}
.anchor-name {
  font-size: 11px;
  font-weight: bold;
}
.audience-count {
  margin-top: 1px;
  font-size: 8px;
}

.follow-btn {
  padding: 0 10px;
  height: 26px;
  color: #fff;
  font-size: 11px;
  border-radius: 13px;
  background: #ee3769;
}

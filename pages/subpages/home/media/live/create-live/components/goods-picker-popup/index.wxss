.goods-picker-popup {
  position: relative;
  padding: 24rpx;
  padding-bottom: 100rpx;
  height: 1100rpx;
  max-height: 100vh;
  background: #f5f6f7;
}

.goods-list-wrap {
  height: 100%;
  overflow-y: scroll;
}
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-item {
  margin-bottom: 22rpx;
  padding: 24rpx;
  width: 340rpx;
  height: 450rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}
.goods-img {
  width: 292rpx;
  height: 292rpx;
  border-radius: 10rpx;
}
.goods-name {
  margin-top: 10rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.pick-icon {
  width: 32rpx;
  height: 32rpx;
}

.bottom-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.btn-wrap {
  padding: 0 32rpx;
  height: 100rpx;
}
.select-all-tips {
  margin-left: 10rpx;
  color: #333;
  font-size: 28rpx;
}
.confirm-btn {
  width: 196rpx;
  height: 64rpx;
  color: #666;
  font-size: 28rpx;
  background: #E4E4E4;
  border-radius: 32rpx;
}
.confirm-btn.active {
  color: var(--gold-1);
  background: var(--blue-linear-2);
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  padding: 0 24rpx;
  width: 100%;
  background: #fff;
  z-index: 100;
}

.search-bar {
  padding: 24rpx 0;
}
.search-content {
  position: relative;
  padding-left: 24rpx;
  padding-right: 140rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  border: 1px solid var(--blue-1);
}
.search-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-input {
  padding-left: 10rpx;
  flex: 1;
  height: 68rpx;
  color: #333;
  font-size: 28rpx;
}
.cancel-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}
.cancel-icon {
  width: 32rpx;
  height: 32rpx;
}
.search-btn {
  position: absolute;
  top: -1px;
  right: -1px;
  width: 140rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 40rpx;
  background: var(--blue-1);
}

.menu-tab-list {
  border-top: 1px solid #f5f6f7;
}
.menu-tab {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #999;
}
.menu-tab.active {
  position: relative;
  color: #333;
  font-weight: 550;
}
.menu-tab.active::after {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  content: "";
  background: #0095fa;
  border-radius: 4rpx;
}

.content {
  padding: 234rpx 24rpx calc(136rpx + env(safe-area-inset-bottom));
}

.commodity-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.commodity-item {
  margin-bottom: 22rpx;
  padding: 24rpx;
  width: 340rpx;
  height: 450rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}
.commodity-img {
  width: 292rpx;
  height: 292rpx;
  border-radius: 10rpx;
}
.commodity-name {
  margin-top: 10rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}
.commodity-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.pick-icon {
  width: 32rpx;
  height: 32rpx;
}

.confirm-btn {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  height: 88rpx;
  color: var(--gold-1);
  font-size: 32rpx;
  background: var(--blue-linear-2);
  border-radius: 44rpx;
}

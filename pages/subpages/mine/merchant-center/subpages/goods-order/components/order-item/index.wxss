.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.list-header {
  font-size: 28rpx;
}
.contact-btn {
  color: #333;
  font-weight: 500;
}
.order-status {
  color: var(--blue-1);
}

.list-content {
  margin: 24rpx 0;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.deliver-info-wrap {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f5f6f7;
  border-radius: 24rpx;
}
.deliver-info {
  margin-bottom: 16rpx;
  color: #666;
  font-size: 24rpx;
}
.deliver-info:last-child {
  margin-bottom: 0;
}
.order-sn, .address-detail {
  margin: 0 10rpx;
}
.address-detail {
  flex: 1;
}
.order-icon, .copy-icon, .address-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--blue-1);
  border-radius: 28rpx;
  border: 1rpx solid var(--blue-1);
}
.btn.active {
  color: #fff;
  background: var(--blue-1);
}
.btn:last-child {
  margin-right: 0;
}

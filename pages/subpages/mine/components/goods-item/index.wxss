.goods-item {
  margin-bottom: 24rpx;
}
.goods-item.is-last {
  margin-bottom: 0;
}

.goods-img {
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  padding-right: 18rpx;
  flex: 1; 
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.goods-sku {
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  width: fit-content;
  color: #999;
  font-size: 24rpx;
  line-height: 1.6;
  background: #f9f9f9;
  border-radius: 8rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
}
.count-wrap {
  font-size: 24rpx;
  color: #333;
}
.count {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-weight: 500;
}

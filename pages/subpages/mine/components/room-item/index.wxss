.room-img {
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.room-content {
  display: flex;
  flex-direction: column;
  flex: 1; 
  height: 190rpx;
}
.room-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.room-detail-wrap {
  flex: 1;
}
.room-info-list {
  margin-top: 12rpx;
}
.room-info {
  padding: 0 16rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 1;
  border-right: 1px solid #ddd;
}
.room-info:first-child {
  padding-left: 0;
}
.room-info:last-child {
  border-right: none;
}

.cancellable-status {
  margin-top: 12rpx;
  color: #1dc3c1;
  font-size: 24rpx;
}
.cancellable-status.uncancellable {
  color: #333;
}
.cancellable-icon {
  margin-right: 8rpx;
  width: 26rpx;
  height: 26rpx;
}

.additional-info {
  margin-top: 24rpx;
  padding-top: 12rpx;
  border-top: 1px solid #eee;
}
.additional-info-item {
  margin-top: 12rpx;
  font-size: 24rpx;
}
.additional-info-label {
  color: #333;
  font-weight: 500;
}
.additional-info-content {
  color: #666;
}
.count {
  color: #169dfe;
  font-weight: 500;
}
.customer-item {
  position: relative;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}
.info-wrap {
  display: flex;
  align-items: center;
  padding: 24rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f5f6f8;
}
.info {
  margin-left: 16rpx;
}
.name {
  color: #14191f;
  font-size: 28rpx;
  font-weight: 500;
}
.mobile {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  color: #3c3f42;
  font-size: 24rpx;
}
.visible-icon {
  margin-left: 8rpx;
  width: 28rpx;
  height: 20rpx;
}
.num-desc {
  margin-top: 2rpx;
  color: #3c3f42;
  font-size: 24rpx;
}
.data-wrap {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-top: 1px solid #f0f3f7;
}
.gmv, .time {
  color: #3c3f42;
  font-size: 24rpx;
}

.identity-tag {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 92rpx;
  height: 44rpx;
  font-size: 20rpx;
  border-radius: 0 16rpx 0 16rpx;
}
.identity-tag.promoter {
  color: #f5701d;
  background: #fff7e6;
}
.identity-tag.c1 {
  color: #0dc1e2;
  background: #ebfcff;
}
.identity-tag.c2 {
  color: #00aa5a;
  background: #dff7ec;
}
.identity-tag.c3 {
  color: #ff4747;
  background: #ffebeb;
}

.container {
  padding: 24rpx;
}
.level-info-wrap {
  position: relative;
  padding: 68rpx 0 24rpx 24rpx;
  background: rgba(255, 239, 204, 0.1);
  border-radius: 24rpx;
  border: 2px solid #fde4b4;
  overflow: hidden;
}
.level-tag {
  position: absolute;
  top: 0;
  left: 0;
  padding: 4rpx 18rpx;
  color: #fff;
  font-size: 24rpx;
  border-right: 2px solid #fde4b4;
  border-bottom: 2px solid #fde4b4;
  border-bottom-right-radius: 24rpx;
  background: linear-gradient(90deg, rgb(74, 233, 210) 0%, rgb(18, 200, 169) 100%);
}
.level-medal {
  position: absolute;
  right: 24rpx;
  top: 18rpx;
  width: 168rpx;
  height: 162rpx;
}
.current-level {
  color: #404A5C;
  font-size: 36rpx;
  font-weight: bolder;
}
.current-level-desc {
  color: #404A5C;
  font-size: 24rpx;
}
.progress-wrap {
  display: flex;
  align-items: center;
  margin-top: 36rpx;
}
.progress-bar {
  position: relative;
  width: 400rpx;
  height: 24rpx;
  background: #fff;
  border-radius: 12rpx;
}
.progress-bar-inner {
  position: absolute;
  padding-right: 6rpx;
  height: 24rpx;
  color: #fff;
  font-size: 18rpx;
  line-height: 24rpx;
  text-align: right;
  background: linear-gradient(90deg, rgb(113, 195, 254) 0%, rgb(60, 155, 255) 100%);
  border-radius: 12rpx;
}
.next-level {
  margin-left: 18rpx;
  color: #404A5C;
  font-size: 28rpx;
  font-weight: bolder;
}
.next-level-desc {
  display: flex;
  align-items: center;
  color: #404A5C;
  font-size: 24rpx;
}
.arrow {
  width: 24rpx;
  height: 24rpx;
}
function statusDesc(status) {
  var desc = "";
  if (status === 101) {
    desc = "待付款";
  } else if (status === 102 || status === 103 || status === 104) {
    desc = "交易关闭";
  } else if (status === 201 || status === 202) {
    desc = "待发货";
  } else if (status === 203) {
    desc = "退款申请中";
  } else if (status === 204) {
    desc = "退款成功";
  } else if (status === 301) {
    desc = "待收货";
  } else if (status === 302) {
    desc = "待自提";
  } else if (status === 401 || status === 402 || status === 403) {
    desc = "待评价";
  } else if (status === 501 || status === 502) {
    desc = "交易成功";
  }
  return desc;
}

function statusDescForShop(status) {
  var desc = "";
  if (status === 201 || status === 202) {
    desc = "待发货";
  } else if (status === 203) {
    desc = "待退款";
  } else if (status === 204) {
    desc = "已退款";
  } else if (status === 301) {
    desc = "待收货";
  } else if (status === 302) {
    desc = "待自提";
  } else if (status === 401 || status === 402 || status === 403) {
    desc = "已确认";
  } else if (status === 501 || status === 502) {
    desc = "已评价";
  }
  return desc;
}

function paymentDesc(status) {
  var desc = "应付款";
  if (status === 101) {
    desc = "需付款";
  } else if (
    status === 201 ||
    status === 202 ||
    status === 204 ||
    status === 301 ||
    status === 302 ||
    status === 401 ||
    status === 402 ||
    status === 403
  ) {
    desc = "实付款";
  }
  return desc;
}

module.exports = {
  statusDesc: statusDesc,
  statusDescForShop: statusDescForShop,
  paymentDesc: paymentDesc
};

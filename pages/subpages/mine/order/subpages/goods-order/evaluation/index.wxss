.container {
  padding: 24rpx 24rpx calc(104rpx + env(safe-area-inset-bottom));
}

.goods-list {
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.goods-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #eee;
}
.goods-item:last-child {
  border-bottom: none;
}
.goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}
.goods-info {
  margin-left: 24rpx;
  flex: 1;
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}
.goods-sku {
  margin-top: 16rpx;
  padding: 6rpx 12rpx;
  width: fit-content;
  color: #999;
  font-size: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.evaluation-info-wrap {
  margin-top: 24rpx;
  padding: 24rpx 24rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
}
.score-title {
  margin-top: 2rpx;
  margin-right: 18rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}
.score {
  margin-left: 8rpx;
  color: #666;
  font-size: 28rpx;
}
.evaluation-content {
  margin-top: 24rpx;
  padding: 24rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
  border-radius: 16rpx;
  background: #f5f6fe;
}

.van-uploader__wrapper {
  margin-top: 32rpx;
}
.van-uploader__upload {
  margin: 0 !important;
}

.submit-btn {
  position: fixed;
  left: 50%;
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  height: 100rpx;
  width: 680rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 50rpx;
  background: var(--blue-1);
}

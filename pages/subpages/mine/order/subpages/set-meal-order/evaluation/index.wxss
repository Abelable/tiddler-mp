.container {
  padding: 24rpx 24rpx calc(104rpx + env(safe-area-inset-bottom));
}

.evaluation-info-wrap {
  padding: 24rpx 24rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
}
.score-title {
  margin-top: 2rpx;
  margin-right: 18rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}
.score {
  margin-left: 8rpx;
  color: #666;
  font-size: 28rpx;
}
.evaluation-content {
  margin-top: 24rpx;
  padding: 24rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
  border-radius: 16rpx;
  background: #f5f6f7;
}

.van-uploader__wrapper {
  margin-top: 32rpx;
}
.van-uploader__upload {
  margin: 0 !important;
}

.submit-btn {
  position: fixed;
  left: 50%;
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  height: 100rpx;
  width: 680rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 50rpx;
  background: #0095fa;
}

.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.list-header {
  font-size: 28rpx;
}
.shop-logo {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.shop-name {
  flex: 1;
  color: #333;
  font-weight: 500;
}
.order-status {
  color: var(--blue-1);
}

.list-content {
  margin: 24rpx 0;
}

.countdown-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 24rpx;
  height: 60rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}
.alarm-icon {
  width: 32rpx;
  height: 32rpx;
}
.countdown {
  margin-left: 12rpx;
  color: var(--blue-1);
  font-size: 22rpx;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--blue-1);
  border-radius: 28rpx;
  border: 1rpx solid var(--blue-1);
}
.btn.active {
  color: #fff;
  background: var(--blue-1);
}
.btn:last-child {
  margin-right: 0;
}

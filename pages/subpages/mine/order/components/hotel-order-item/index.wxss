.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 32rpx;
}

.list-header {
  font-size: 28rpx;
}

.hotel-cover {
  margin-right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.hotel-name {
  max-width: 240rpx;
  flex: 1;
  color: #333;
  font-weight: 500;
}

.order-status {
  color: var(--blue-1);
}

.countdown-wrap {
  margin-left: 18rpx;
  padding-left: 16rpx;
  padding-right: 8rpx;
  height: 50rpx;
  color: #666;
  font-size: 22rpx;
  background: #f5f6fa;
  border-radius: 25rpx;
}
.alarm-icon {
  margin-right: 6rpx;
  width: 28rpx;
  height: 28rpx;
}
.countdown {
  margin-left: 6rpx;
  width: 93rpx;
  color: var(--blue-1);
}

.list-content {
  margin: 24rpx 0;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 60rpx;
  color: #333;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: 0.5px solid #e1e1e1;
}
.btn.active {
  color: var(--blue-1);
  border: 0.5px solid var(--blue-1);
}
.btn:last-child {
  margin-right: 0;
}

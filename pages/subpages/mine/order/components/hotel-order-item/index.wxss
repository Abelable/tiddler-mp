.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.list-header {
  font-size: 28rpx;
}

.shop-logo {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.shop-name {
  flex: 1;
  color: #333;
  font-weight: 500;
}

.order-status {
  color: var(--blue-1);
}

.countdown-wrap {
  margin-left: 18rpx;
  padding-left: 16rpx;
  padding-right: 8rpx;
  height: 50rpx;
  color: #666;
  font-size: 22rpx;
  background: #f5f6f8;
  border-radius: 25rpx;
}
.alarm-icon {
  margin-right: 6rpx;
  width: 28rpx;
  height: 28rpx;
}
.countdown {
  margin-left: 6rpx;
  width: 93rpx;
  color: var(--blue-1);
}

.list-content {
  margin: 24rpx 0;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--blue-1);
  border-radius: 28rpx;
  border: 1rpx solid var(--blue-1);
}
.btn.active {
  color: #fff;
  background: var(--blue-1);
}
.btn:last-child {
  margin-right: 0;
}

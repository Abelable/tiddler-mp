.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
}

.qr-code-poster {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 11;
}
.info-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
}
.info-title {
  color: #333;
  font-size: 30rpx;
}
.qr-code {
  margin-top: 24rpx;
  padding: 18rpx;
  width: 360rpx;
  height: 360rpx;
  border: 1px solid #eee;
}
.code {
  margin-top: 24rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bolder;
}
.tips {
  margin-top: 12rpx;
  color: #999;
  font-size: 24rpx;
  font-weight: 300;
}

.close-icon {
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

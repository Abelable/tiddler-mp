.address-list {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
}
.address {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}
.inner {
  padding: 24rpx;
}
.address-icon {
  width: 36rpx; 
  height: 36rpx;
}
.content {
  margin: 0 24rpx;
  flex: 1;
  color: #999;
  font-size: 26rpx;
}
.user-name {
  margin-right: 20rpx; 
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.default-icon {
  margin-left: 24rpx;
  padding: 6rpx 8rpx;
  color: var(--blue-1);
  font-size: 20rpx;
  line-height: 1;
  border-radius: 8rpx;
  border: 2rpx solid var(--blue-1);
}
.address-detail {
  margin-top: 16rpx;
  color: #333;
  font-size: 26rpx;
}

.swipe-cell-delete-btn {
  width: 65px;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  background: #FD0807;
}

.add-btn {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: 712rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: var(--blue-1);
}

.card-title {
  color: #333;
  font-size: 28rpx;
}
.filling-area {
  margin-top: 24rpx;
  padding: 12rpx;
  width: 100%;
  height: 240rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  border: 1rpx solid #dbdbdb;
}
.btns-wrap {
  display: flex; 
  justify-content: flex-end; 
  align-items: center;
  margin-top: 24rpx;
}
.text-btns {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.clear-btn, .submit-btn {
  padding: 3px 10px;
}
.clear-btn {
  margin-right: 10rpx;
  color: #333;
}
.submit-btn {
  color: #fff;
  background: var(--blue-1);
  border-radius: 5px;
}

.card {
  margin: 24rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.info-list {
  width: 100%;
  height: 100rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.info-list:last-child {
  border: none;
}
.title {
  width: 160rpx;
}
.content {
  flex: 1;
  color: #333;
}
.content.placeholder {
  color: #999;
}

.save-btn {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: 712rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: var(--blue-1);
}

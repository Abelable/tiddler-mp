.card-title {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.filling-area {
  margin-top: 24rpx;
  padding: 24rpx;
  width: 100%;
  height: 280rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  border-radius: 18rpx;
  border: 0.5px solid #eee;
}

.btns-wrap {
  display: flex; 
  align-items: center;
  justify-content: space-around;
  margin-top: 24rpx;
}
.clear-btn, .submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 68rpx;
  font-size: 26rpx;
  border-radius: 34rpx;
}
.clear-btn {
  color: #333;
  background: #f3f3f3;
}
.submit-btn {
  color: #fff;
  background: var(--blue-1);
}

.card {
  margin: 24rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.info-list {
  width: 100%;
  height: 100rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 0.5px solid #eee;
}
.info-list:last-child {
  border: none;
}
.title {
  width: 160rpx;
  font-weight: 500;
}
.content {
  flex: 1;
  color: #333;
}
.content.placeholder {
  color: #999;
}

.save-btn {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  width: calc(100vw - 48rpx);
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 44rpx;
  background: var(--blue-1);
}

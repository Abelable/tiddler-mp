.task-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.merchant-name {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.task-status {
  font-size: 24rpx;
}
.task-status.default {
  color: #999;
}
.task-status.processing {
  color: #1677ff;
}
.task-status.success {
  color: #52c41a;
}
.task-status.warning {
  color: #faad14;
}
.task-status.error {
  color: #ff4d4f;
}

.merchant-position {
  display: flex;
  margin-top: 12rpx;
  color: #999;
  font-size: 24rpx;
}
.position-icon {
  margin-top: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.reward-info-wrap {
  margin-top: 68rpx;
}
.coin-icon {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}
.reward {
  color: #fdc72f;
  font-size: 28rpx;
  font-weight: bolder;
}
.navigate-btn, .task-btn, .detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  padding: 0 24rpx;
  min-width: 120rpx;
  height: 58rpx;
  color: #333;
  font-size: 24rpx;
  border-radius: 29rpx;
  border: 0.5px solid #ddd;
}
.task-btn.active {
  color: #fff;
  font-weight: bold;
  border: none;
  background: linear-gradient(135deg, #ff5f3e 0%, #ff0057 100%);
}
.container {
  padding: 24rpx;
}

.data-board {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.data-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.record-btn {
  padding: 0 18rpx;
  height: 50rpx;
  color: #666;
  font-size: 24rpx;
  border: 0.5px solid #ddd;
  border-radius: 25rpx;
}
.arrow {
  width: 18rpx;
  height: 18rpx;
}
.data-info-wrap {
  align-items: flex-end;
  margin-top: 60rpx;
}
.data-item {
  margin-right: 80rpx;
}
.data-name {
  color: #3C3F42;
  font-size: 24rpx;
}
.data-num {
  margin-top: 12rpx;
  color: #14191F;
  font-size: 50rpx;
  font-weight: bolder;
}
.withdraw-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 25rpx;
  background: linear-gradient(135deg, #ff5f3e 0%, #ff0057 100%);
}

.menu-item {
  display: flex;
  align-items: center;
  margin-left: 12rpx;
  margin-right: 32rpx;
  height: 100rpx;
  color: #999;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.menu-item.active::after {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  content: "";
  background: #ff0057;
}

.task-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.task-name {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.task-status {
  color: #999;
  font-size: 24rpx;
}
.task-position {
  display: flex;
  margin-top: 12rpx;
  color: #999;
  font-size: 24rpx;
}
.position-icon {
  margin-top: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.reward-info-wrap {
  margin-top: 68rpx;
}
.coin-icon {
  margin-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}
.reward {
  color: #fdc72f;
  font-size: 28rpx;
  font-weight: bolder;
}
.detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  width: 150rpx;
  height: 58rpx;
  color: #333;
  font-size: 24rpx;
  border-radius: 29rpx;
  border: 0.5px solid #ddd;
}

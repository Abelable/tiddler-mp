.container {
  padding: 24rpx;
}

.data-board {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.data-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.record-btn {
  padding: 0 18rpx;
  height: 50rpx;
  color: #666;
  font-size: 24rpx;
  border: 0.5px solid #ddd;
  border-radius: 25rpx;
}
.arrow {
  width: 18rpx;
  height: 18rpx;
}
.data-info {
  margin-top: 60rpx;
}
.data-item {
  flex: 1;
}
.data-name {
  color: #3C3F42;
  font-size: 24rpx;
}
.data-num {
  margin-top: 12rpx;
  color: #14191F;
  font-size: 50rpx;
  font-weight: bolder;
}

.menu-item {
  display: flex;
  align-items: center;
  margin-left: 12rpx;
  margin-right: 32rpx;
  height: 100rpx;
  color: #999;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.menu-item.active::after {
  position: absolute;
  left: 50%;
  bottom: 24rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  content: "";
  background: #ff0057;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

<view class="header" style="padding-top: {{statusBarHeight}}px;">
  <view class="nav-bar row">
    <back-icon />
    <view class="search-bar" bindtap="search">
      <image class="search-icon" src="https://static.tiddler.cn/mp/search.png" />
      <input 
        class="search-input"
        value="{{orderSn}}" 
        bindinput="setOrderSn" 
        bindconfirm="search" 
        placeholder="请输入订单编号" 
        type="text" 
        confirm-type="search" 
      />
      <image 
        class="cancel-icon" 
        wx:if="{{orderSn}}" 
        bindtap="cancelSearch" 
        src="https://static.tiddler.cn/mp/search/clear.png" 
      />
    </view>
  </view>
  <view class="menu-wrap">
    <view 
      class="menu-item {{curMenuIndex === index ? 'selected' : ''}} row center" 
      wx:for="{{menuList}}" wx:key="index" 
      bindtap="selectMenu" data-index="{{index}}"
    >
      <view>{{item.name}}</view>
      <view class="total-spot" wx:if="{{item.total > 0}}" />
    </view>
  </view>
</view>

<view class="content" style="margin-top: {{statusBarHeight + 88}}px;">
  <view class="order-list">
    <refund-item 
      wx:for="{{refundList}}" 
      wx:key="index" 
      item="{{item}}" 
      index="{{index}}" 
      shopId="{{shopId}}"
      bind:update="updateRefundList"
      bind:reject="showRejectModal"
    />
  </view>
  <empty-illus wx:if="{{finished && !refundList.length}}" desc="暂无售后订单列表" />
  <view class="no-more-tips" wx:if="{{finished && refundList.length}}">～没有更多啦～</view>
</view>

<reject-modal 
  wx:if="{{rejectModalVisible}}"
  shopId="{{shopId}}"
  refundId="{{refundId}}"
  bind:confirm="rejected" 
  bind:hide="hideRejectModal" 
/>

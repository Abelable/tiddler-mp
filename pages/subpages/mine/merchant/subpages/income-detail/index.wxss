.nav-bar-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar-wrap.show-bg {
  overflow: hidden;
  background: linear-gradient( 180deg, #00B2FF 0%, #F6F6F6 50%);
  background-size: 100% 100vh;
  background-repeat: no-repeat;
  background-position: top;
}
.nav-bar {
  padding: 0 8px;
  height: 44px;
}
.nav-bar-title {
  flex: 1;
  color: #fff;
  font-size: 16px;
  font-weight: 550;
  text-align: center;
}

.container {
  position: relative;
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient( 180deg, #00B2FF 0%, #F6F6F6 50%);
  background-size: 100% 100vh;
  background-repeat: no-repeat;
  background-position: top;
}

.income-card {
  padding: 38rpx 32rpx 32rpx;
  background: linear-gradient( 218deg, rgba(255,255,255,0) 0%, #FFFFFF 36%);
  border-radius: 32rpx;
}
.income-unit {
  flex: 1;
}
.income-desc {
  color: #666;
  font-size: 24rpx;
}
.income-amount {
  margin-top: 6rpx;
  color: #141925;
  font-size: 36rpx;
  font-weight: 500;
}
.income-amount.withdrawable {
  font-size: 44rpx;
}
.income-wrap {
  margin-top: 32rpx;
}

.record-btn {
  color: #999;
  font-size: 24rpx;
}
.arrow {
  width: 18rpx;
  height: 18rpx;
}

.withdraw-btn {
  margin-top: 32rpx;
  height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  background: #00A5FF;
  border-radius: 50rpx;
}

.daily-data-wrap {
  margin-top: 24rpx;
  padding: 28rpx;
  padding-bottom: 32rpx;
  background: #fff;
  border-radius: 32rpx;
}
.date-menu {
  display: flex;
  justify-content: space-between;
}
.date {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 116rpx;
  height: 56rpx;
  color: #6A6F75;
  font-size: 28rpx;
  border-radius: 28rpx;
  border: 1px solid transparent;
}
.date.selected {
  color: var(--blue-1);
  background: var(--blue-3);
  border: 1px solid var(--blue-1);
}

.daily-data-list {
  display: flex;
  margin-top: 46rpx;
}
.daily-data-item {
  flex: 3;
  text-align: center;
}
.daily-data-item:first-child {
  flex: 2;
}
.daily-data {
  color: #000;
  font-size: 32rpx;
  font-weight: 550;
}
.daily-data-desc {
  margin-top: 16rpx;
  color: #6A6F75;
  font-size: 24rpx;
}

.sales-record-list {
  margin-top: 24rpx;
}
.sales-record-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 32rpx;
}
.order-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}
.order-sn-wrap {
  flex: 1;
  color: #6A6F75;
  font-size: 24rpx;
}
.order-sn {
  display: flex;
  align-items: center;
}
.order-sn-arrow {
  width: 24rpx;
  height: 24rpx;
}
.order-status-wrap {
  display: flex;
  margin-top: 12rpx;
}
.order-time {
  margin-left: 48rpx;
}
.order-commission-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.order-commission {
  color: #14191F;
  font-size: 32rpx;
  font-weight: 550;  
}
.order-type {
  margin-top: 8rpx;
  padding: 6rpx 10rpx;
  width: fit-content;
  color: #A1A9B3;
  font-size: 20rpx;
  line-height: 1;
  border: 1px solid #A1A9B3;
  border-radius: 8rpx;
}

.goods-info-wrap {
  display: flex;
  align-items: center;
}
.goods-cover {
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
}
.goods-info {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
  flex: 1;
  height: 150rpx;
}
.goods-name {
  color: #14191F;
  font-size: 26rpx;
  font-weight: 550;
}
.goods-spec {
  margin: 4rpx;
  flex: 1;
  color: #6A6F75;
  font-size: 22rpx;
}
.goods-commission {
  color: var(--blue-1);
  font-size: 24rpx;
}

.no-more-tips {
  padding: 24rpx 0 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

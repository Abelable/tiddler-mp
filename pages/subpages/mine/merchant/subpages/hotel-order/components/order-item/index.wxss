.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 32rpx;
}

.order-header {
  font-size: 28rpx;
}
.user-avatar {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.user-name {
  flex: 1;
  color: #333;
  font-weight: 500;
}
.order-status {
  color: var(--blue-1);
}

.order-content {
  margin: 24rpx 0;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.deliver-info-wrap {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f5f6f7;
  border-radius: 24rpx;
}
.deliver-info {
  margin-bottom: 16rpx;
  color: #666;
  font-size: 24rpx;
}
.deliver-info:last-child {
  margin-bottom: 0;
}
.order-sn, .address-detail {
  margin: 0 10rpx;
}
.address-detail {
  flex: 1;
}
.order-icon, .copy-icon, .address-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 60rpx;
  color: #333;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: 0.5px solid #e1e1e1;
}
.btn.active {
  color: var(--blue-1);
  border: 0.5px solid var(--blue-1);
}
.btn:last-child {
  margin-right: 0;
}


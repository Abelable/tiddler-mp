.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
}

.nav-bar {
  padding: 0 8px;
  height: 44px;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  padding: 0 22rpx;
  width: 340rpx;
  height: 36px;
  border-radius: 18px;
  background: #fff;
  border: 0.5px solid #e1e1e1;
}
.search-icon {
  width: 16px;
  height: 16px;
}
.placeholder {
  flex: 1;
  margin-left: 12rpx;
  color: #a1a9b3;
  font-size: 26rpx;
}


.menu-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  width: 100%;
  height: 44px;
  background: #fff;
  border-top: 1px solid #f5f6fa;
}
.menu-item {
  position: relative;
  padding: 0 2px;
  height: 20px;
  color: #666;
  font-size: 14px;
}
.menu-item.selected {
  position: relative;
  color: var(--blue-1);
  font-weight: bold;
}
.menu-item.selected::after {
  position: absolute;
  bottom: -6px;
  left: 50%;
  transform: translateX(-50%);
  width: 15px;
  height: 3px;
  content: '';
  border-radius: 1.5px;
  background: var(--blue-1);
}
.total-spot {
  position: absolute;
  top: 0;
  right: 0;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fb301e;
}

.content {
  margin-top: 40px;
  padding: 24rpx;
}

.no-more-tips {
  padding: 24rpx 0 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

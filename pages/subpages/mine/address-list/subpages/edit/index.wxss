.card {
  margin: 24rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.info-list {
  width: 100%;
  height: 100rpx;
  color: #333;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.info-list:last-child {
  border: none;
}
.title {
  width: 160rpx;
}
.content {
  flex: 1;
  color: #333;
}
.content.placeholder {
  color: #999;
}

.btns-wrap {
  position: fixed;
  left: 0;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  width: 100%;
  padding: 0 24rpx;
}
.delete-btn, .save-btn {
  flex: 1;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.delete-btn {
  margin-right: 12rpx;
  background: #FD0B0A;
}
.save-btn {
  margin-left: 12rpx;
  background: var(--blue-1);
}

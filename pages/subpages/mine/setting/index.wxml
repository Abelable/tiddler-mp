<view class="list-wrap">
  <view class="list row between" bindtap="editUserInfo">
    <view class="title">编辑个人信息</view>
    <image class="arrow" src="./images/arrow.png" />
  </view>
  <view class="list row between" wx:if="{{toolVisible}}" bindtap="navToAuth">
    <view class="title">实名认证</view>
    <image class="arrow" src="./images/arrow.png" />
  </view>
</view>

<view class="list-wrap" wx:if="{{toolVisible}}">
  <view 
    class="list row between" 
    wx:for="{{['景区', '酒店', '餐饮', '电商']}}" 
    wx:key="index" 
    bindtap="settleIn" 
    data-index="{{index}}"
  >
    <view class="title">{{item}}商家入驻</view>
    <image class="arrow" src="./images/arrow.png" />
  </view>
</view>

<view class="list-wrap">
  <view class="list row between">
    <view class="title">常见问题与反馈</view>
    <image class="arrow" src="./images/arrow.png" />
  </view>
  <button 
    class="list row between"
    open-type="share" 
    hover-class="none"
  >
    <view class="title">推荐给好友</view>
    <image class="arrow" src="./images/arrow.png" />
  </button>
  <button 
    class="list row between"
    open-type="contact" 
    session-from="sessionFrom" 
    hover-class="none"
  >
     <view class="title">在线客服</view>
    <image class="arrow" src="./images/arrow.png" />
  </button>
  <view class="list row between">
    <view class="title">关于小鱼游</view>
    <view class="row">
      <view class="content">v{{version}}</view>
      <image class="arrow" src="./images/arrow.png" />
    </view>
  </view>
</view>
.container {
  padding-bottom: calc(152rpx + env(safe-area-inset-bottom));
}

.header {
  position: relative;
  flex-direction: column;
  height: 400rpx;
  font-size: 0;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.avatar-wrap {
  position: relative;
  width: 140rpx;
  height: 140rpx;
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.avatar-edit-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
}
.edit-icon {
  width: 24rpx;
  height: 24rpx;
}

.bg-edit-btn {
  margin-top: 32rpx;
  width: 200rpx;
  height: 72rpx;
  color: #333;
  font-size: 26rpx;
  background: #fff;
  border-radius: 36rpx;
}

.form-list {
  padding: 0 24rpx;
  font-weight: 300;
  background: #fff;
}
.form-item {
  color: #333;
  font-size: 28rpx;
  height: 120rpx;
  border-bottom: 1px solid #eee;
}
.form-label {
  margin-right: 24rpx;
}
.form-input, .form-content {
  flex: 1;
}
.form-content.empty {
  color: #999;
}

.btn-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
}
.cancel-btn, .save-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.cancel-btn {
  margin-right: 32rpx;
  color: #333;
  border: 1px solid #333;
}
.save-btn {
  color: #999;
  border: 1px solid #999;
}
.save-btn.active {
  color: var(--blue-1);
  border: 1px solid var(--blue-1);
}

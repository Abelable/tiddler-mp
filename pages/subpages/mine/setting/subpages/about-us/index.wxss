.container {
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 2px 20px #f0f0f0;
}
.title {
  margin-top: 24rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.section {
  margin-top: 8rpx;
  color: #666;
  font-size: 24rpx;
  text-indent: 2em
}

.info {
  margin-top: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.info-title {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  height: 100rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.info-list {
  border-top: 0.5px solid #f5f6f8;
}
.info-item {
  display: flex;
  align-items: center;
  margin: 0 24rpx;
  height: 100rpx;
  border-bottom: 0.5px solid #f5f6f8;
}
.info-item:last-child {
  border-bottom: none;
}
.info-content {
  flex: 1;
  color: #333;
  font-size: 26rpx;
}
.arrow {
  margin-left: 6rpx;
  width: 24rpx;
  height: 24rpx;
}
.card {
  margin: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}
.title {
  position: relative;
  width: fit-content;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.title.required::after {
  position: absolute;
  top: -4rpx;
  right: -18rpx;
  content: '*';
  color: red;
}

.textarea-wrap {
  position: relative;
  margin: 24rpx 0;
  padding: 24rpx;
  background: #f5f6fe;
  border-radius: 24rpx;
}
.content-textarea {
  width: 100%;
  height: 360rpx;
  font-size: 26rpx;
}
.length-desc {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  color: #999;
  font-size: 26rpx;
}

.van-uploader__wrapper {
  margin-top: 24rpx;
}
.van-uploader__upload {
  margin: 0 !important;
}

.mobile-input {
  margin-top: 12rpx;
  font-size: 26rpx;
}

.submit-btn {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100vw - 48rpx);
  height: 88rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  background: var(--blue-1);
  z-index: 100;
}

.order-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}

.list-header {
  font-size: 28rpx;
}
.restaurant-name {
  flex: 1;
  color: #333;
  font-weight: 500;
}
.order-status {
  color: var(--theme-color);
}

.list-content {
  margin: 24rpx 0;
}

.total-info {
  justify-content: flex-end;
  color: #333;
  font-size: 24rpx;
  font-weight: 550;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--theme-color);
  border-radius: 28rpx;
  border: 1rpx solid var(--theme-color);
}
.btn.active {
  color: #fff;
  background: var(--theme-color);
}
.btn:last-child {
  margin-right: 0;
}

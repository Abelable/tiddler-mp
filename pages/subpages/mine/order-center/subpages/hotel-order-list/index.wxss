.menu {
  justify-content: space-around;
  padding: 0 6px;
  background: #fff;
  border-top: 1px solid #f5f6f8;
}
.menu-item {
  height: 40px;
  color: #666;
  font-size: 14px;
}
.menu-item.selected {
  position: relative;
  color: #3979BE;
  font-size: 15px;
  font-weight: bold;
}
.menu-item.selected::after {
  position: absolute;
  bottom: 2px;
  left: 50%;
  transform: translateX(-50%);
  width: 15px;
  height: 3px;
  content: '';
  border-radius: 1.5px;
  background: #3979BE;
}

.content {
  margin-top: 40px;
  padding: 24rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

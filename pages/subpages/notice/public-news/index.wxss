.news-list-wrap {
  padding: 0 24rpx;
}
.time {
  padding-top: 29rpx;
  color: #666;
  font-size: 20rpx;
  text-align: center;
}
.news-list {
  margin-top: 24rpx;
  padding: 28rpx 18rpx;
  font-size: 0;
  background: #fff;
  border-radius: 12rpx;
}

.list-status-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-main {
  margin-right: 10rpx;
  flex: 1;
}
.list-status {
  position: relative;
  width: fit-content;
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}
.list-status.unread::after {
  position: absolute;
  top: 50%;
  right: -20rpx;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  content: '';
  border-radius: 6rpx;
  background: #FE4019;
}
.list-desc {
  margin-top: 8rpx;
  color: #999;
  font-size: 24rpx;
}
.list-img {
  margin-top: 8rpx;
  width: 666rpx;
  border-radius: 8rpx;
}

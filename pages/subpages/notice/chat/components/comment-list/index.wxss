.comment {
  position: absolute;
  height: 100%;
  overflow: scroll;
}
.msg-list {
  margin: 0 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.datetime {
  margin-top: 12px;
  padding: 0 14px;
  height: 24px;
  font-size: 12px;
  color: #333;
  line-height: 24px;
  border-radius: 16px;
  background: rgba(0,0,0,0.1);
}
.message-detail {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-flow: row;
  width: 100%;
}
.message-detail.mine {
  flex-flow: row-reverse;
}
.avatar {
  flex: 0 0 48px;
  height: 48px;
  border-radius: 50%;
}
.content {
  position: relative;
  margin: 24px 63px 20px 15px;  
  padding: 10px;
  font-size: 14px;
  line-height: 22px;
  background-color: #fff;
  border-radius: 0 4px 4px 4px;
}
.content.mine {
  margin: 24px 15px 20px 63px;
  background-color: #B2B7FF;
  border-radius: 4px 0 4px 4px;
}
.content.complex {
  padding: 5px;
  background-color: #fff;
}
.content::before {
  position: absolute;
  top: 0;
  left: -8px;
  content: "";
  width: 0px;
  height: 0px;
  border-top: 8px solid #fff;
  border-left: 8px solid #f6f6f6;
}
.content.mine::before {
  border-top: 0 solid #fff;
}
.content::after {
  border-top: 0 solid #B2B7FF;
}
.content.mine::after {
  position: absolute;
  top: 0;
  right: -8px;
  content: "";
  width: 0px;
  height: 0px;
  border-top: 8px solid #B2B7FF;
  border-right: 8px solid #f6f6f6;
}
.content.mine.complex::after {
  border-top: 8px solid #fff;
}
.goods, .order {
  display: flex;
  align-items: center;
  width: 245px; 
  height: 70px;
}
.goods-img {
  margin-right: 8px;
  width: 68px;
  height: 68px;
  border-radius: 4px;
}
.goods-detail, .order-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  height: 100%;
}
.order-num {
  display: flex;
  align-items: center;
  font-size: 12px;
  font-weight: 500;
  color: #666;
  white-space: nowrap;
}
.order-num-tip {
  margin-right: 3px;
  padding: 0 2px;
  width: 36px;
  height: 14px;
  background-color: #8E8E8E;
  text-align: center;
  line-height: 14px;
  font-size: 9px;
  color: #fff;
  border-radius: 2px;
}
.goods-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 13px;
  line-height: 18px;
  color: #333;
}
.goods-price {
  font-size: 14px;
  font-weight: 500;
  color: #E22222;
}
.consignee {
  padding-top: 5px;
  flex: 1;
  font-size: 13px;
  font-weight: 500;
  color: #666;
}
.order-time {
  font-size: 11px;
  color: #999;
  font-weight: 500;
  line-height: 1;
  white-space: nowrap;
}

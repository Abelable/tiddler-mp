.comment {
  position: absolute;
  height: 100%;
  overflow: scroll;
}
.msg-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 24rpx;
}
.datetime {
  margin-top: 24rpx;
  padding: 0 24rpx;
  height: 48rpx;
  color: #666;
  font-size: 22rpx;
  line-height: 48rpx;
  background: #fff;
  border-radius: 24rpx;
}
.message-detail {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-flow: row;
  margin-top: 24rpx;
  width: 100%;
}
.message-detail.mine {
  flex-flow: row-reverse;
}
.avatar {
  flex: 0 0 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.content {
  position: relative;
  margin: 0 100rpx 40rpx 16rpx;  
  padding: 24rpx;
  color: #262626;
  font-size: 28rpx;
  line-height: 44rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.content.mine {
  margin: 0 16rpx 40rpx 100rpx;
  color: #fff;
  background-color: #1F85FE;
}
.content.complex {
  line-height: normal;
  background: #fff;
}
.product, .order {
  display: flex;
  align-items: center;
}
.product-cover-wrap {
  position: relative;
  margin-right: 24rpx;
  width: 124rpx;
  height: 124rpx;
  font-size: 0;
}
.product-cover {
  width: 124rpx;
  height: 124rpx;
  border-radius: 12rpx;
}
.product-type {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  padding: 0 12rpx;
  height: 36rpx;
  color: #000;
  font-size: 18rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.8);
}
.product-detail, .order-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  height: 124rpx;
}
.order-num {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}
.order-num-tip {
  margin-right: 6rpx;
  padding: 0 4rpx;
  width: 72rpx;
  height: 28rpx;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 28rpx;
  background: #8E8E8E;
  border-radius: 4rpx;
}
.product-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.product-price {
  color: #FD2D55;
  font-size: 32rpx;
  font-weight: 500;
  text-align: right;
}
.consignee {
  padding-top: 10rpx;
  flex: 1;
  color: #666;
  font-size: 26rpx;
  font-weight: 500;
}
.order-time {
  color: #999;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
  white-space: nowrap;
}

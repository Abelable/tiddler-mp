.comment {
  position: absolute;
  height: 100%;
  overflow: scroll;
}
.msg-list {
  margin: 0 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.datetime {
  margin-top: 24rpx;
  padding: 0 14px;
  height: 24px;
  font-size: 12px;
  color: #666;
  line-height: 24px;
  border-radius: 16px;
  background: #fff;
}
.message-detail {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-flow: row;
  margin-top: 24rpx;
  width: 100%;
}
.message-detail.mine {
  flex-flow: row-reverse;
}
.avatar {
  flex: 0 0 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.content {
  position: relative;
  margin: 0px 126rpx 40rpx 16rpx;  
  padding: 10px;
  color: #262626;
  font-size: 14px;
  line-height: 22px;
  background-color: #fff;
  border-radius: 16rpx;
}
.content.mine {
  margin: 0 16rpx 40rpx 126rpx;
  color: #fff;
  background-color: #1F85FE;
}
.content.complex {
  padding: 24rpx;
  background: #fff;
}
.goods, .order {
  display: flex;
  align-items: center;
  width: 245px; 
  height: 70px;
}
.goods-img {
  margin-right: 8px;
  width: 68px;
  height: 68px;
  border-radius: 4px;
}
.goods-detail, .order-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  height: 100%;
}
.order-num {
  display: flex;
  align-items: center;
  font-size: 12px;
  font-weight: 500;
  color: #666;
  white-space: nowrap;
}
.order-num-tip {
  margin-right: 3px;
  padding: 0 2px;
  width: 36px;
  height: 14px;
  background-color: #8E8E8E;
  text-align: center;
  line-height: 14px;
  font-size: 9px;
  color: #fff;
  border-radius: 2px;
}
.goods-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}
.goods-price {
  font-size: 14px;
  font-weight: 500;
  color: #FD2D55;
}
.consignee {
  padding-top: 5px;
  flex: 1;
  font-size: 13px;
  font-weight: 500;
  color: #666;
}
.order-time {
  font-size: 11px;
  color: #999;
  font-weight: 500;
  line-height: 1;
  white-space: nowrap;
}

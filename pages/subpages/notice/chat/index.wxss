.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.comment {
  position: relative;
  flex: 1;
}
.chat-reply {
  background: rgb(253,253,253);
}
.chat-input-wrap {
  padding: 0 12px;
  display: flex;
  align-items: center;
  width: 100%;
  height: 54px;
  box-shadow: 0px -1px 0px 0px rgb(230,230,230);
}
.chat-input {
  padding: 0 20px;
  flex: 1;
  height: 40px;
  border-radius: 20px;
  background-color: #F2F2F2;
  font-size: 14px;
}

.face-icon, .add-icon {
  width: 34px;
  height: 34px;
}
.face-icon {
  margin-left: 12px;
}
.add-icon {
  margin-left: 16px;
}
.emoji-wrap {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  overflow-x: scroll;
  height: 150px;
  width: 100%;
  box-shadow: 0px -1px 0px 0px rgb(230,230,230);
}
.emoji { 
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
}
.emoji-tab {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  background-color: #F2F2F2;
}
.emoji-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  font-size: 18px;
  background-color: rgb(253,253,253);
}
.send-btn {
  margin-left: 16px;
  width: 80px;
  height: 40px;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  line-height: 40px;
  border-radius: 3px;
  background: linear-gradient(135deg,rgba(255,191,210,1) 0%,rgba(254,25,77,1) 100%);
}
.more-operate {
  display: flex;
  align-items: center;
  height: 88px;
}
.operate-block {
  margin: 0 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 4px;
  background-color: #CBCBCB;
}
.operate-tip {
  margin-top: 5px;
  font-size: 13px;
  color: #666;
  font-weight: 500;
}

.goods-list, .order-list {
  display: flex;
  /* align-items: center; */
  position: fixed;
  left: 50%;
  padding: 6px;
  width: 95%;
  height: 80px;
  border-radius: 4px;
  background-color: #fff;
  transform: translateX(-50%);
}
.goods-img{
  height:68px;
  width:68px;
  border-radius: 4px;
}
.goods-detail{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left:8px;
}
.goods-detail .goods-price{
  color:#EAAB63;
}
.operation-wrap {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
.add-cart {
  width: 78px;
  height: 24px;
  border-radius: 12px;
  border: 1px solid rgba(254,29,80,1);
  font-size: 12px;
  color: #FE1F52;
  text-align: center;
  line-height: 24px;
  display: inline-block;
}

.seek-btn {
  margin-left: 8px;
  width: 68px;
  height: 24px;
  background: linear-gradient(135deg,rgba(255,128,164,1) 0%,rgba(254,25,77,1) 100%);
  border-radius: 12px;
  text-align: center;
  line-height: 24px;
  font-size: 12px;
  color: #fff;
  display: inline-block;
}

.order-operation {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  height: 100%;
}

.order-status {
  font-size: 13px;
  font-weight: 500;
  color: #E93C65;
}

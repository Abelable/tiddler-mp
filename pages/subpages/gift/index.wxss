.container {
  position: fixed;
  top: 0;
  left: 0;
  padding-top: 80rpx;
  width: 100vw;
  height: 100vh;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}

.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.illus {
  display: block;
  margin: 50rpx auto 0;
  width: 600rpx;
  height: 410rpx;
}

.goods-list-wrap {
  position: relative;
  margin-top: 80rpx;
  padding: 20rpx;
  width: 100%;
  background: linear-gradient(180deg, #F2FFF3 0%, #E6FFE7 100%);
  border-radius: 48rpx 48rpx 0 0;
}

.process {
  position: absolute;
  top: -78rpx;
  left: 0;
  width: 100vw;
  height: 168rpx;
  z-index: -1;
}

.menu {
  padding: 0 6rpx;
  width: 100%;
  height: 68rpx;
  background: #A3DB62;
  border-radius: 34rpx;
}
.menu-item {
  position: relative;
  flex: 1;
  height: 56rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  font-weight: bold;
  font-style: italic;
  border-radius: 30rpx;
}
.menu-item.active {
  color: #000;
  font-weight: bolder;
  background: #FAFEE6;
}
.menu-item-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}
.active-tag {
  width: 77rpx;
  height: 20rpx;
}

.goods-list {
  margin-top: 20rpx;
  height: calc(100vh - 720rpx);
  overflow-y: scroll;
}

.no-more-tips {
  padding: 18rpx 0 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}


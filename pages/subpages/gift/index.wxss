.container {
  position: fixed;
  top: 0;
  left: 0;
  padding-top: 80rpx;
  width: 100vw;
  height: 100vh;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}

.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.notice {
  display: block;
  margin: 0 auto;
  width: 724rpx;
  height: 502rpx;
}

.goods-list-wrap {
  position: relative;
  margin-top: 24rpx;
  padding: 20rpx;
  width: 100%;
  background: linear-gradient( 90deg, #85CFFC 0%, #FDF368 100%);
  box-shadow: inset 8px 8px 12px 0px rgba(255,255,255,0.6);
  border-radius: 48rpx 48rpx 0 0;
}

.flower-illus {
  position: absolute;
  top: -147rpx;
  right: 24rpx;
  width: 151rpx;
  height: 147rpx;
}

.menu {
  padding: 0 4rpx;
  width: 100%;
  height: 68rpx;
  background: rgba(255,255,255,0.6);
  border-radius: 34rpx;
}
.menu-item {
  flex: 1;
  height: 60rpx;
  color: #666;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.menu-item.active {
  color: #fff;
  font-weight: 500;
  background: #00C8FF;
}

.goods-list {
  margin-top: 20rpx;
  height: calc(100vh - 710rpx);
  overflow-y: scroll;
}

.no-more-tips {
  padding: 18rpx 0 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}


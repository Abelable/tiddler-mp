.nav-bar-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background: transparent;
  transition: background .2s ease;
}
.nav-bar-wrap.show {
  background: #f2fff3;
  transition: background .2s ease;
}
.nav-bar {
  padding: 0 8px;
  height: 44px;
}
.title {
  flex: 1;
  color: #333;
  font-size: 16px;
  font-weight: 550;
  text-align: center;
}

.container {
  position: relative;
  padding-top: 80rpx;
  width: 100vw;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}

.back-icon-wrap {
  position: absolute;
  left: 8px;
  display: flex;
  align-items: center;
  height: 34px;
}

.illus {
  display: block;
  margin: 50rpx auto 0;
  width: 600rpx;
  height: 410rpx;
}

.goods-list-wrap {
  position: relative;
  margin-top: 80rpx;
  background: #f2fff3;
  border-radius: 48rpx 48rpx 0 0;
}
.goods-list-wrap.fixed {
  padding-top: 108rpx;
}

.process {
  position: absolute;
  top: -78rpx;
  left: 0;
  width: 100vw;
  height: 168rpx;
  z-index: -1;
}

.menu-wrap {
  padding: 20rpx;
  background: #f2fff3;
  border-radius: 48rpx 48rpx 0 0;
  transition: border-radius .2s ease;
}
.menu-wrap.fixed {
  position: fixed;
  left: 0;
  width: 100%;
  border-radius: 0;
  z-index: 100;
  transition: border-radius .2s ease;
}
.menu {
  padding: 6rpx;
  background: #A3DB62;
  border-radius: 34rpx;
}
.menu-item {
  position: relative;
  flex: 1;
  height: 56rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  font-weight: bold;
  font-style: italic;
  border-radius: 30rpx;
}
.menu-item.active {
  color: #000;
  font-weight: bolder;
  background: #FAFEE6;
}
.menu-item-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}
.active-tag {
  width: 77rpx;
  height: 20rpx;
}

.goods-list {
  padding: 0 20rpx;
  min-height: calc(100vh - 720rpx);
}

.no-more-tips {
  padding: 18rpx 0 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}


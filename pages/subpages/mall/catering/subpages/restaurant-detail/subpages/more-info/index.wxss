.menu {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  height: 44px;
  background: #fff;
  border-top: 1px solid #f5f6f8;
  box-shadow: 0 1px 1px 0 rgba(0,0,0,0.05);
  z-index: 100;
}
.menu-item {
  padding: 0 12px;
  height: 44px;
  color: #999;
  font-size: 14px;
  white-space: nowrap;
}
.menu-item.active {
  position: relative;
  color: #333;
  font-weight: bold;
}
.menu-item.active::after {
  position: absolute;
  left: 50%;
  bottom: 6px;
  transform: translateX(-50%);
  width: 25px;
  height: 3px;
  content: "";
  border-radius: 2px;
  background: #77a9fd;
}

.container {
  margin-top: 44px;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 18rpx;
}
.card-title {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.open-status {
  margin-left: 12rpx;
  padding: 0 12rpx;
  height: 32rpx;
  color: #faad14;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
  border-radius: 8rpx;
  background: #f8f2d3;
}
.open-status.active {
  color: #5dce86;
  background: #d1f7e5;
}

.grid {
  margin-top: 24rpx;
  border-radius: 18rpx;
  border: 1px solid #ddecf6;
  overflow: hidden;
}
.grid-line {
  display: flex;
  border-bottom: 1px solid #ddecf6;
}
.grid-line:last-child {
  border-bottom: none;
}
.grid-line.title {
  background: #EEF2F5;
}
.grid-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx;
  flex: 1;
  color: #333;
  font-size: 24rpx;
  border-right: 1px solid #ddecf6;
}
.grid-item:last-child {
  border-right: none;
}
.grid-item.main {
  flex: 3;
}
.grid-item.content {
  justify-content: flex-start;
}

.tel {
  padding: 24rpx 0;
  color: #333;
  font-size: 24rpx;
  border-bottom: 1px solid #f5f6f8;
}
.tel:last-child {
  padding-bottom: 0;
  border-bottom: none;
}
.tel-icon {
  width: 48rpx;
  height: 48rpx;
}

.facility-list {
  margin-top: 12rpx;
  flex-wrap: wrap;
}
.facility {
  margin-right: 12rpx;
  margin-top: 12rpx;
  color: #999;
  font-size: 20rpx;
  background: #f2f2f2;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

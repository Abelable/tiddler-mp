.set-meal-item {
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
}

.set-meal-info {
  margin: 0 24rpx;
  flex: 1;
  overflow: hidden;
}
.set-meal-name {
  color: #333;
  font-size: 30rpx;
  font-weight: 550;
}

.tips {
  margin-top: 12rpx;
  color: #666;
  font-size: 22rpx;
}

.price-wrap {
  margin-top: 12rpx;
}
.original-price {
  margin-top: 4rpx;
  margin-left: 12rpx;
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
}
.discount {
  margin-top: 4rpx;
  margin-left: 12rpx;
  padding: 0 6rpx;
  color: #F66B38;
  font-size: 20rpx;
  border: 1px solid #fed9cc;
  border-radius: 6rpx;
}

.buy-btn-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.buy-btn {
  margin-top: 8rpx;
  width: 100rpx;
  height: 56rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 28rpx;
  background: #F66B38;
}
.sales {
  margin-top: 6rpx;
  color: #666;
  font-size: 22rpx;
}

.container {
  padding: 24rpx 0 calc(150rpx + env(safe-area-inset-bottom));
}
.container::before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  content: "";
  background: linear-gradient( 180deg, #00B2FF 20%, rgba(0,178,255,0) 100%);
  z-index: -1;
}

.header {
  padding-left: 8px;
  padding-right: 40px;
  height: 44px;
}
.title {
  flex: 1;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
}

.ticket {
  margin: 24rpx;
  font-size: 0;
  border-radius: 32rpx;
  overflow: hidden;
}

.ticket-header {
  padding: 32rpx;
  padding-bottom: 16rpx;
  background: #fff;
}
.restaurant-name {
  color: #333;
  font-size: 28rpx;
}
.ticket-name-wrap {
  margin-top: 8rpx;
}
.ticket-name {
  color: #333;
  font-size: 38rpx;
  font-weight: 550;
}
.price-wrap {
  margin-top: 24rpx;
}
.discount {
  margin-top: 6rpx;
  margin-left: 8rpx;
  padding: 0 6rpx;
  color: #ff5040;
  font-size: 20rpx;
  border: 1px solid #f77d72;
  border-radius: 6rpx;
}

.split-line {
  width: 100%;
}

.count-control-title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}

.ticket-content {
  padding: 32rpx;
  padding-top: 16rpx;
  background: #fff;
}

.ticket-tips-wrap {
  margin-top: 32rpx;
}
.ticket-tips {
  margin-top: 12rpx;
  font-size: 24rpx;
}
.tips-title {
  color: #333;
  font-weight: 500;
}
.tips-content {
  margin-left: 12rpx;
  color: #999;
}
.more-icon {
  width: 24rpx;
  height: 24rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  justify-content: flex-end;
  padding: 18rpx 24rpx calc(18rpx + env(safe-area-inset-bottom));
  width: 100%;
  background: #fff;
  border-top: 1px solid #f5f6f7;
}
.price-label {
  margin-top: 8rpx;
  margin-right: 8rpx;
  color: #666;
  font-size: 24rpx;
}
.submit-btn {
  height: 80rpx;
  width: 220rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background: var(--blue-1);
}

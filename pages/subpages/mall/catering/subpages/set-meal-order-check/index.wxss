.container {
  padding: 24rpx;
  padding-bottom: calc(60px + env(safe-area-inset-bottom));
}
  
.card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}

.restaurant-name {
  color: #333;
  font-size: 26rpx;
}

.set-meal-name-wrap {
  margin-top: 12rpx;
}
.set-meal-name {
  margin-right: 24rpx;
  flex: 1;
  color: #333;
  font-size: 36rpx;
  font-weight: 550;
}
.detail-tips {
  color: var(--blue-1);
  font-size: 24rpx;
}

.cover {
  margin-top: 20rpx;
  width: 100%;
  border-radius: 20rpx;
}

.set-meal-tips-wrap {
  margin-top: 20rpx;
  padding-top: 12rpx;
  border-top: 1px solid #eee;
}
.set-meal-tips {
  margin-top: 12rpx;
  font-size: 24rpx;
}
.tips-title {
  font-weight: 500;
}
.tips-content {
  margin-left: 12rpx;
}
.more-icon {
  width: 24rpx;
  height: 24rpx;
}

.price-wrap {
  margin-top: 12rpx;
}
.original-price {
  margin-top: 6rpx;
  margin-left: 14rpx;
  color: #999;
  font-size: 26rpx;
  text-decoration: line-through;
}
.discount {
  margin-top: 6rpx;
  margin-left: 14rpx;
  padding: 0 6rpx;
  color: #F66B38;
  font-size: 20rpx;
  border: 1px solid #fed9cc;
  border-radius: 6rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  justify-content: flex-end;
  padding: 18rpx 24rpx calc(18rpx + env(safe-area-inset-bottom));
  width: 100%;
  background: #fff;
  border-top: 1px solid #f5f6f7;
}
.price-label {
  margin-top: 8rpx;
  margin-right: 8rpx;
  color: #666;
  font-size: 24rpx;
}
.submit-btn {
  height: 80rpx;
  width: 220rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background: #F66B38;
}

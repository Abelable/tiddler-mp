.menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #f5f6f8;
  box-shadow: 0 1px 1px 0 rgba(0,0,0,0.05);
  z-index: 100;
}
.menu-item {
  flex: 1;
  height: 44px;
  color: #999;
  font-size: 14px;
}
.menu-item.active {
  position: relative;
  color: #333;
  font-weight: bold;
}
.menu-item.active::after {
  position: absolute;
  left: 50%;
  bottom: 6px;
  transform: translateX(-50%);
  width: 25px;
  height: 3px;
  content: "";
  border-radius: 2px;
  background: #77a9fd;
}

.container {
  margin-top: 44px;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.card-title {
  margin-bottom: 24rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}
.card {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 18rpx;
}

.hotel-name {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.more-info {
  margin-top: 8rpx;
  color: #666;
  font-size: 24rpx;
}

.hotel-tel-wrap {
  margin-top: 18rpx;
  font-size: 26rpx;
}
.tel-label {
  color: #333;
  font-weight: bold;
}
.hotel-tel {
  color: #666;
  font-weight: bold;
}
.contact-btn {
  margin-left: 24rpx;
  padding: 0 12rpx;
  height: 48rpx;
  color: #333;
  font-size: 22rpx;
  border: 1px solid #ddd;
  border-radius: 24rpx;
}

.brief {
  margin-top: 24rpx;
  color: #666;
  font-size: 24rpx;
}

.feature-item {
  padding-top: 24rpx;
  border-bottom: 1px solid #f5f6f8;
}
.feature-item:first-child {
  padding-top: 0;
}
.feature-label, .policy-label {
  width: 150rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: 550;
}
.feature-content-list {
  flex-wrap: wrap;
  flex: 1;
}
.feature-content {
  margin-bottom: 24rpx;
  width: 50%;
  color: #666;
  font-size: 26rpx;
}

.policy-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f6f8;
}
.policy-item:first-child {
  padding-top: 0;
}
.policy-label {
  color: #333;
  font-size: 26rpx;
  font-weight: 550;
}
.policy-content-list {
  margin-top: 12rpx;
}
.policy-content {
  position: relative;
  margin-top: 12rpx;
  padding-left: 18rpx;
  color: #666;
  font-size: 24rpx;
}
.policy-content::after {
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  content: '';
  background: #999;
  border-radius: 50%;
}

.warning-tips {
  position: relative;
  margin-top: 24rpx;
  padding-left: 12rpx;
  color: #999;
  font-size: 20rpx;
}
.warning-tips::after {
  position: absolute;
  top: 0;
  left: 0;
  content: "*";
  font-size: 18rpx;
  color: #999;
}
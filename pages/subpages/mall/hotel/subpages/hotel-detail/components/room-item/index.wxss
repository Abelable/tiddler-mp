.room-item {
  position: relative;
  padding: 24rpx;
  height: 200rpx;
  border-top: 1px solid #fff;
  /* border-bottom: 1px solid #ddd; */
}
/* .room-item:last-child {
  border-bottom: none;
} */
.room-info-wrap {
  font-size: 28rpx;
  font-weight: 550;
}
.breakfast-status {
  color: #1dc3c1;
}
.room-info {
  margin-left: 12rpx;
  color: #333;
}
.cancellable-status {
  margin-top: 12rpx;
  color: #1dc3c1;
  font-size: 24rpx;
}
.cancellable-status.uncancellable {
  color: #333;
}
.cancellable-icon {
  margin-right: 8rpx;
  width: 26rpx;
  height: 26rpx;
}
.shop-name {
  margin-top: 12rpx;
  color: #999;
  font-size: 22rpx;
}

.room-price-wrap {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}

.commission-tag {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  padding-left: 20rpx;
  padding-right: 16rpx;
  height: 40rpx;
  color: #fff;
  font-size: 18rpx;
  background: #FD2D55;
  border-radius: 20rpx;
}
.commission-visible-icon {
  margin-left: 8rpx;
  width: 24rpx;
  height: 24rpx;
}

.order-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 24rpx;
  width: 90rpx;
  height: 90rpx;
  background: #F8D95A;
  border: 2px solid #F8D95A;
  border-radius: 20rpx;
  overflow: hidden;
}
.order-btn-title {
  flex: 1;
  color: #333;
  font-size: 36rpx;
  font-weight: 600;
}
.order-btn-desc {
  padding: 6rpx 0;
  width: 100%;
  color: #333;
  font-size: 18rpx;
  text-align: center;
  line-height: 1;
  background: #fff;
}
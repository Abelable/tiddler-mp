<wxs module="TIME" src="/utils/filters/time.wxs" />

<view class="evaluation-item">
  <view class="user-info-wrap row">
    <image class="user-avatar" src="{{item.userInfo.avatar}}?x-oss-process=image/format,webp" />
    <view class="user-info">
      <view class="user-name">{{item.userInfo.nickname}}</view>
      <view class="comment-date">{{TIME.timeDiff(item.createdAt)}}</view>
    </view>
    <view class="row">
      <van-rate value="{{item.score || 0}}" size="16" gutter="0" color="#fa2458" void-icon="star" void-color="#fedbe4" allow-half readonly />
      <view class="comment-rate">{{item.score}}åˆ†</view>
    </view>
  </view>
  <view class="comment-content {{contentOmit ? 'omit' : ''}}">{{item.content}}</view>
  <view class="comment-images-wrap">
    <view class="comment-images row" wx:if="{{item.imageList.length}}">
      <image 
        class="comment-image" 
        wx:for="{{imageList}}" 
        wx:key="imageIndex" 
        wx:for-index="imageIndex" 
        wx:for-item="image" 
        src="{{image}}"
        bindtap="previewImage"
        data-current="{{image}}"
        mode="aspectFill"
        lazy-load
      />
    </view>
    <view class="more-image-tips row center" wx:if="{{item.imageList.length > 3}}">+{{item.imageList.length - 3}}</view>
  </view>
</view>

@import "./index.skeleton.wxss";

.nav-bar-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar {
  position: relative;
  height: 44px;
  box-sizing: initial;
}
.nav-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.bg-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(4px);
  z-index: -1;
}
.scenic-image {
  margin-left: 8px;
  width: 30px;
  height: 30px;
  border-radius: 4px;
}
.scenic-info {
  margin-left: 8px;
  color: #fff;
  font-weight: bold;
}
.bar-scenic-name {
  font-size: 14px;
}
.grade-wrap {
  font-size: 8px;
}
.scenic-grade {
  margin-left: 4rpx;
}

.menu-wrap {
  height: 44px;
  background: #fff;
  box-shadow: 0 1px 1px 0 rgba(0,0,0,0.05);
}
.menu {
  display: flex;
  flex-wrap: nowrap;
  flex: 1;
  height: 44px;
  overflow-x: scroll;
}
.menu-item {
  padding: 0 12px;
  height: 44px;
  color: #999;
  font-size: 14px;
  white-space: nowrap;
}
.menu-item.active {
  position: relative;
  color: #333;
  font-weight: bold;
}
.menu-item.active::after {
  position: absolute;
  left: 50%;
  bottom: 8px;
  transform: translateX(-50%);
  width: 24rpx;
  height: 6rpx;
  content: '';
  background: #f476b4;
  border-radius: 6rpx 0 6rpx 0;
}
.share-btn {
  position: relative;
  width: 50px;
  height: 44rpx;
}
.share-btn::before {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 1px;
  height: 32px;
  content: "";
  background: linear-gradient(#fff, #ddd, #fff);
  border-radius: 16px;
}

.banner-wrap {
  position: relative;
}
.banner-video {
  position: relative;
}
.banner-dots {
  position: absolute;
  right: 24rpx;
  bottom: 48rpx;
  padding: 0 12rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 1;
  font-weight: 500;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}
.dot-icon {
  margin-right: 8rpx;
  width: 20rpx;
  height: 20rpx;
}
.cur-dot {
  font-size: 24rpx;
}

.video-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}
.video-player {
  width: 100%;
  height: 100%;
}
.mute-icon-wrap {
  position: absolute;
  left: 24rpx;
  bottom: 48rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
}
.mute-icon {
  width: 30rpx;
  height: 30rpx;
}

.container {
  position: absolute;
  left: 0;
  top: 560rpx;
  padding: 20rpx;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
}
.scenic-name {
  color: #333;
  font-size: 38rpx;
  font-weight: bold;
}
.level-tag {
  margin-left: 8rpx;
  padding: 0 12rpx;
  height: 32rpx;
  color: #5dce86;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
  border-radius: 8rpx;
  background: #d1f7e5;
}
.share-icon {
  width: 42rpx;
  height: 42rpx;
}

.score-wrap {
  margin-top: 10rpx;
}
.score {
  margin-left: 10rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.no-score {
  margin-left: 10rpx;
  color: #333;
  font-size: 20rpx;
}

.info-list-wrap {
  margin-top: 8px;
}
.info-list {
  height: 88rpx;
  border-bottom: 1px solid #eee;
}
.info-list:last-child {
  border-bottom: none;
}
.clock-icon, .position-icon {
  margin-right: 12rpx;
  width: 26rpx;
  height: 26rpx;
}
.opening-status {
  margin-right: 12rpx;
  padding: 0 8rpx;
  height: 30rpx;
  color: #37B766;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 30rpx;
  border: 1px solid #37B766;
  border-radius: 4rpx;
}
.opening-status.closed {
  color: #999;
  border: 1px solid #999;
}
.opening-hours {
  margin-right: 24rpx;
  flex: 1;
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}
.more-detail {
  color: #666;
  font-size: 24rpx;
}
.more-icon {
  margin-left: 2rpx;
  width: 20rpx;
  height: 20rpx;
}

.navigation-btn {
  padding: 0 16rpx;
  height: 36rpx;
  color: #666;
  font-size: 20rpx;
  border-radius: 18rpx;
  background: #f1f1f1;
}
.navigation-icon {
  margin-right: 4rpx;
  width: 18rpx;
  height: 18rpx;
}

.content-title-wrap {
  margin-top: 48rpx;
}
.content-title {
  position: relative;
  padding-left: 12rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.content-title::before {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  content: '';
  background: #f476b4;
  border-radius: 6rpx 0 6rpx 0;
}
.content-title-tips {
  margin-left: 12rpx;
  color: var(--blue-1);
  font-size: 24rpx;
}

.ticket-type-menu {
  margin-top: 18rpx;
  white-space: nowrap;
  overflow-x: scroll;
}
.ticket-type-item {
  display: inline-block;
  margin-right: 18rpx;
  padding: 0 18rpx;
  height: 44rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 40rpx;
  border-radius: 22rpx;
  background: #f5f6fe;
  border: 1px solid #f5f6fe;
}
.ticket-type-item.active {
  color: #333;
  border: 1px solid #ddd;
}

.collapse {
  margin-top: 24rpx;
  background: #f8f8f8;
  border-radius: 18rpx;
}

.evaluation-summary {
  margin-top: 24rpx;
}
.total-tips {
  margin-top: 24rpx;
  color: #666;
  font-size: 24rpx;
}

.qa-list {
  margin-top: 24rpx;
}
.qa-item {
  position: relative;
  padding: 24rpx 42rpx;
  border-bottom: 1px solid #eee;
}
.qa-item:first-child {
  margin-bottom: 8px;
  background: #fff;
  box-shadow: 0 0 12rpx 6rpx #f5f6fe;
  border-radius: 18rpx;
  border-bottom: none;
}
.qa-item:last-child {
  margin-bottom: 24rpx;
}
.qa-question {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}
.answer-user {
  margin-top: 18rpx;
  margin-left: 8rpx;
}
.qa-answers-avatars {
  margin-left: 8rpx;
  margin-right: 8rpx;
}
.answer-user-avatar {
  margin-left: -8rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}
.answer-user-name {
  margin-left: 8rpx;
  color: #333;
  font-size: 22rpx;
}
.qa-no-answer {
  margin-top: 12rpx;
  color: #666;
  font-size: 22rpx;
}
.qa-answers {
  margin-top: 12rpx;
}
.qa-answer {
  margin-top: 4rpx;
  color: #666;
  font-size: 22rpx;
}
.qa-answers-number {
  color: #666;
  font-size: 22rpx;
}
.qa-label {
  position: absolute;
  left: 0;
  top: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30rpx;
  height: 30rpx;
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 30rpx;
  background: var(--blue-1);
  border-radius: 0 6rpx 6rpx 6rpx;
}

.hotel-list {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 24rpx;
  height: 380rpx;
}

.scenic-list {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 24rpx;
  height: 280rpx;
}

.media-wrap {
  margin-top: 24rpx;
}

.merchant-btn {
  margin: 24rpx 0;
  width: 160rpx;
  height: 58rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  background: linear-gradient(90deg, #009bff 0, #0073ff 100%);
  border-radius: 18rpx;
}

.qa-btn {
  margin: 24rpx 0;
  width: 140rpx;
  height: 56rpx;
  color: #fff;
  font-size: 24rpx;
  background: var(--blue-1);
  border-radius: 28rpx;
}

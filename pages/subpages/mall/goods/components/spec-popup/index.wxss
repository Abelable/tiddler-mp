.spec-selection {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  height: 1000rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.spec-info-wrap {
  display: flex;
  margin-bottom: 20rpx;
  height: 200rpx;
}
.spec-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}
.spec-info {
  margin-left: 24rpx;
  flex: 1;
  height: 190rpx;
  color: #333;
  font-size: 24rpx;
}
.commission {
  color: var(--theme-color);
  font-size: 24rpx;
}
.spec-stock {
  margin: 8rpx 0;
  flex: 1;
  color: #999;
}

.selection-mian {
  margin-top: 32rpx;
  flex: 1;
  overflow-y: scroll;
}
.spec-list {
  margin-bottom: 32rpx;
}
.spec-title {
  color: #333;
  font-size: 26rpx;
  font-weight: 550;
}
.spec-content {
  color: #666;
  font-size: 26rpx;
}
.spec-content-arrow {
  width: 24rpx;
  height: 24rpx;
} 
.spec-tips {
  display: inline-block;
  margin: 24rpx 24rpx 0 0;
  padding: 10rpx 20rpx;
  max-width: 100%;
  font-size: 24rpx;
  color: #333;
  border-radius: 8rpx;
  border: 1px solid #F6F6F6;
  background-color: #F6F6F6;
}
.spec-tips.selected {
  color: var(--theme-color);
  border: 1px solid var(--theme-color);
  background: #ebf6f8;
}

.count-control-wrap {
  display: flex;
  justify-content: flex-end;
}

.btns-wrap {
  margin-top: 24rpx;
}
.cart-btn, .buy-btn, .edit-btn {
  flex: 1;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  background: #e6e6e6;
}
.cart-btn.active {
  background: var(--theme-color);
}
.cart-btn.border {
  color: #ccc;
  border: 1px solid #ccc;
  background: none !important;
}
.cart-btn.border.active {
  color: var(--theme-color);
  border: 1px solid var(--theme-color);
  background: none !important;
}
.buy-btn.active {
  background: var(--theme-color);
}
.edit-btn.active {
  background: var(--theme-color);
}

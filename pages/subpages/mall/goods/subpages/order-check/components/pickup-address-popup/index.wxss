.address-popup {
  padding: 24rpx;
  background: #f5f6f8;
}

.title {
  color: #333;
  font-size: 32rpx;
  font-weight: 550;
  text-align: center;
}
.add-btn {
  color: var(--theme-color);
  font-size: 28rpx;
}

.address-list {
  margin-top: 24rpx;
  height: 800rpx;
  overflow-y: scroll;
}
.address-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}
.radio {
  transform: scale(0.8);
}
.content {
  padding-left: 12rpx;
  padding-right: 48rpx;
  flex: 1;
}
.address-name {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.address-detail {
  margin-top: 8rpx;
  color: #999;
  font-size: 26rpx;
}
.distance {
  color: #999;
  font-size: 24rpx;
}
.arrow {
  width: 24rpx;
  height: 24rpx;
}

.confirm-btn {
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: var(--theme-color);
}
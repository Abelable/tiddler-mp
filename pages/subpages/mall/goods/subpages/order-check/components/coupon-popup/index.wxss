.coupon-popup {
  padding: 24rpx;
}

.title {
  color: #333;
  font-size: 32rpx;
  font-weight: 550;
  text-align: center;
}

.coupon-list {
  margin-top: 24rpx;
  height: 800rpx;
  overflow-y: scroll;
}
.coupon-item {
  padding: 24rpx 0;
  font-size: 28rpx;
}
.coupon-name {
  flex: 1;
  color: #333;
}
.coupon-denomination {
  margin: 0 24rpx;
  color: #ff5040;
}
.radio {
  transform: scale(0.8);
}

.confirm-btn {
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: var(--blue-1);
}
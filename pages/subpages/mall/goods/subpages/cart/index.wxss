.navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  background: #fff;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar-btn {
  margin-left: 8px;
  width: fit-content;
  height: 32px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.3);
  border: 0.5px solid rgba(255,255,255,0.3);
}
.nav-back-icon {
  margin-left: 4px;
  margin-right: 6px;
  width: 20px;
  height: 20px;
}
.edit-btn {
  margin-left: 8px;
  width: 120rpx;
  height: 32px;
  color: #000;
  font-size: 15px;
  border-radius: 16px;
  border: 0.5px solid #e1e1e1;
}
.navigation-title {
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
}

.checkbox {
  margin-left: 18rpx;
  width: 50rpx;
  transform: scale(0.8);
}
.checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: var(--blue-1);
}
.checkbox.danger .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FD0B0A;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.empty-illus {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}
.empty-desc {
  color: #666;
  font-size: 28rpx;
}
.visit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  width: 150rpx;
  height: 60rpx;
  color: #FD0B0A;
  font-size: 28rpx;
  border-radius: 30rpx;
  border: 2rpx solid #FD0B0A;
}

.wrap {
  padding-bottom: calc(68px + env(safe-area-inset-bottom));
}

.cart-list-wrap {
  padding: 0 24rpx;
}
.cart-list {
  margin-top: 24rpx;
  padding-top: 24rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 12rpx;
}
.cart-list-header {
  height: 40rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.shop-info {
  display: flex;
  align-items: center;
  margin-left: 18rpx;
}
.shop-img {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.list-delete-btn {
  color: #666;
  font-weight: 400;
}

.goods-list-wrap {
  margin-top: 32rpx;
}
.goods-list {
  margin-bottom: 28rpx;
}
.goods-list:last-child {
  margin-bottom: 0;
}
.goods-img {
  margin-left: 8rpx;
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.goods-img.invalid {
  opacity: 0.6;
}
.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  padding-right: 18rpx;
  flex: 1; 
  height: 190rpx;
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.goods-name.invalid {
  opacity: 0.6;
}
.goods-sku-wrap {
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 42rpx;
  width: fit-content;
  background: #f9f9f9;
  border-radius: 8rpx;
}
.goods-sku {
  flex: 1;
  color: #999;
  font-size: 24rpx;
}
.sku-edit-icon {
  margin-left: 6rpx;
  width: 12rpx;
  height: 12rpx;
  transform: rotate(90deg);
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-price {
  font-size: 24rpx;
  line-height: 1;
}
.price-market {
  margin-left: 10rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.invalid-tips-wrap {
  display: flex;
  align-items: center;
  height: 50rpx;
}
.invalid-tips {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
}
.reset-spec-btn {
  width: 110rpx;
  height: 46rpx;
  color: #FD0807;
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 23rpx;
  border: 2rpx solid #FD0807;
}
.swipe-cell-delete-btn {
  width: 65px;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  background: #FD0807;
}

.recommend-goods-wrap {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.nomore-tip {
  padding: 18rpx 0;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0,0,0,0.05);
  z-index: 50;
}
.select-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.bar-main {
  display: flex;
  align-items: center;
}
.total-price {
  color: #333;
  font-size: 26rpx;
}
.submit, .delete-btn {
  margin: 10rpx 20rpx;
  height: 80rpx;
  width: 220rpx;
  color: #999;
  background: #F2F2F2;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
.submit.active {
  color: #fff;
  background: var(--blue-1);
}
.delete-btn.active {
  color: #fff;
  background: #FD0B0A;
}

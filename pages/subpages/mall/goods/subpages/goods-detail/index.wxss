.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 20;
}
.nav-bar.show {
  background: #fff;
  box-shadow: 0 2rpx 2rpx rgba(0,0,0,0.05);
}
.menu-wrap {
  position: absolute;
  left: 50%;
  bottom: 6px;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
  height: 32px;
  color: #666;
  border-radius: 17px;
}
.menu-tips {
  position: relative;
  padding: 0 6px;
  line-height: 32px;
  font-size: 14px;
}
.menu-wrap > .menu-tips.show::after {
  position: absolute;
  left: 50%;
  bottom: 3px;
  transform: translateX(-50%);
  width: 28px;
  height: 1.5px;
  content: '';
  background-color: var(--theme-color);
}

.banner-wrap {
  position: relative;
}
.banner-video {
  position: relative;
}

.video-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}
.video-player {
  width: 100%;
  height: 100%;
}

.customer-banner {
  position: absolute;
  left: 0;
  bottom: 26rpx;
  width: 100%;
  height: 50rpx;
}
.customer-info-wrap {
  padding: 0 24rpx;
  height: 50rpx;
}
.customer-info {
  display: flex;
  align-items: center;
  padding: 0 18rpx;
  max-width: 100%;
  width: fit-content;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 25rpx;
}
.customer-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.customer-name {
  margin-left: 12rpx;
  flex: 1;
  color: #fff;
  font-size: 23rpx;
}
.customer-content {
  margin-left: 12rpx;
  color: #fff;
  font-size: 23rpx;
}

.banner-dots, .banner-dots-menu {
  position: absolute;
  right: 24rpx;
  bottom: 26rpx;
  height: 50rpx;
  font-weight: bold;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 25rpx;
}
.banner-dots {
  padding: 0 24rpx;
  color: #fff;
  font-size: 23rpx;
  line-height: 50rpx;
}
.cur-dot {
  font-size: 24rpx;
}
.banner-dots-menu {
  display: flex;
  align-items: center;
  padding: 0 6rpx;
}
.banner-dots-menu-item {
  display: flex;
  align-items: center;
  padding: 0 18rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
}
.banner-dots-menu-item.active {
  color: #333;
  background: rgba(255, 255, 255, 0.6);
}

.goods-info-wrap {
  margin: 18rpx 24rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  background: #fff;
  overflow: hidden;
}
.market-price {
  margin-left: 16rpx;
  color: #bbb;
  font-size: 28rpx;
  text-decoration: line-through;
}
.sale-volume {
  color: #999;
  font-size: 28rpx;
}

.goods-name {
  margin-top: 8rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: 600;
}
.goods-tag {
  vertical-align: top;
  display: inline-block;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 12rpx;
  height: 36rpx;
  color: #ef3741;
  font-size: 22rpx;
  line-height: 36rpx;
  text-align: center;
  font-weight: 500;
  border-radius: 8rpx;
  background: #fce4e6;
}

.list-spec {
  margin: 18rpx 24rpx;
  padding: 0 24rpx;
  height: 110rpx;
  font-size: 26rpx;
  background: #fff;
  border-radius: 12rpx;
}
.list-spec-title {
  color: #333;
  font-weight: 600;
}
.choose-btn {
  display: flex;
  align-items: center;
  flex: 1;
  margin-left: 24rpx;
}
.choose-btn-desc {
  flex: 1;
  color: #a6a6a6;
  text-align: right;
}
.choose-btn-icon {
  width: 16rpx;
  height: 16rpx;
}

.evaluation-summary-wrap {
  margin: 18rpx 24rpx;
  padding: 0 24rpx;
  height: 110rpx;
  background: #fff;
  border-radius: 12rpx;
}
.evaluation-user-avatar-wrap {
  margin-left: 8rpx;
  margin-right: 12rpx;
}
.evaluation-user-avatar {
  margin-left: -8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}
.evaluation-num {
  color: #333;
  font-size: 26rpx;
  font-weight: 600;
}
.goods-score-wrap {
  color: #666;
  font-size: 26rpx;
}
.goods-score {
  margin-left: 8rpx;
  color: #333;
  font-weight: 600;
}

.goods-detail {
  padding: 24rpx;
  font-size: 0;
  background: #fff;
}

.recommend-goods-wrap {
  padding: 0 20rpx;
}

.nomore-tip {
  padding: 18rpx 0 calc(135rpx + env(safe-area-inset-bottom));
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 12rpx 24rpx calc(10rpx + env(safe-area-inset-bottom));
  width: 100%;
  background: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0,0,0,0.05);
}

.shortcut {
  position: relative;
  margin-left: 26rpx;
  color: #000;
  font-size: 18rpx;
  text-align: center;
  line-height: 1;
}
.shortcut:first-child {
  margin-left: 0;
}
.shortcut-icon {
  width: 48rpx;
  height: 48rpx;
}
.cart-count {
  position: absolute;
  top: -6rpx;
  right: 6rpx;
  padding: 0 10rpx;
  height: 30rpx;
  color: #fff;
  font-size: 18rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  background: #FE4019;
  transform: scale(0.8);
}

.add-cart-btn, .buy-btn {
  width: 230rpx;
  height: 76rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 20rpx;
}
.add-cart-btn {
  color: #010101;
  background: #f0f0f0;
}
.buy-btn {
  margin-left: 12rpx;
  color: #fff;
  background: var(--theme-color);
}

.invalid-notice-btn {
  width: 220rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #d1d1d1;
}

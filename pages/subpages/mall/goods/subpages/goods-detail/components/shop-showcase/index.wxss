.row {
  display: flex;
  align-items: center;
}
.row.between {
  justify-content: space-between;
}
.row.baseline {
  align-items: baseline;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop-showcase {
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 32rpx;
  background: #fff;
}

.shop-info {
  display: flex;
  align-items: center;
}
.avatar-wrap {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  font-size: 0;
}
.shop-logo {
  width: 100%;
  height: 100%;
  border-radius: 22rpx;
}
.enterprise-label {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 30rpx;
  height: 30rpx;
}
.name {
  margin: 0 18rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.check-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 145rpx;
  height: 60rpx;
  color: #2a2a2a;
  font-size: 24rpx;
  background: #f4f4f4;
  border-radius: 18rpx;
}

.goods-item {
  display: inline-block;
  margin-top: 24rpx;
  margin-right: 18rpx;
  width: 210rpx;
  vertical-align: top;
  font-size: 0;
  overflow: hidden;
}
.goods-item:nth-child(3n) {
  margin-right: 0;
}
.goods-image {
  width: 210rpx;
  height: 206rpx;
  border-radius: 16rpx;
}
.goods-title {
  margin-top: 18rpx;
  color: #333;
  font-size: 24rpx;
}
.price-wrap {
  margin-top: 8rpx;
}
.sale-volume {
  color: #959595;
  font-size: 20rpx;
}
.strategy-item {
  margin-bottom: 30rpx;
  width: 350rpx;
}
.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 18rpx;
  overflow: hidden;
}
.cover {
  width: 350rpx;
}
.address-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.address-icon {
  margin-right: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.address-detail {
  flex: 1;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.title {
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 10rpx;
  color: #666;
  font-size: 22rpx;
}
.author-info {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
  flex: 1;
}
.avatar {
  margin-right: 8rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}
.name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.praise-info {
  display: flex;
  align-items: center;
}
.praise-icon {
  margin-right: 6rpx;
  width: 26rpx;
  height: 26rpx;
}
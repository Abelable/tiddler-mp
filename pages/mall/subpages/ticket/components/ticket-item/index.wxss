.ticket-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  font-size: 0;
  border-bottom: 1px solid #f8f8f8;
}
.cover {
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
  height: 220rpx;
}
.title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.labels {
  display: flex;
  margin-top: 10rpx;
}
.label {
  margin-right: 10rpx;
  color: #999;
  font-size: 20rpx;
  background: #f6f6f6;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}
.score-wrap {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.star {
  width: 30rpx;
  height: 30rpx;
}
.score {
  margin-left: 10rpx;
  color: #666;
  font-size: 22rpx;
}
.position-wrap {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  color: #666;
  font-size: 20rpx;
}
.position-icon {
  margin-right: 6rpx;
  width: 20rpx;
  height: 20rpx;
}
.price-info {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  flex: 1;
}
.sales {
  color: #666;
  font-size: 24rpx;
}
.price {
  color: #999;
  font-size: 22rpx;
}
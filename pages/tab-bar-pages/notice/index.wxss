.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
}
.nav-bar {
  padding: 0 8px;
  height: 44px;
}

.all-read-btn {
  padding: 6px 8px;
  color: #333;
  font-size: 10px;
  background: #eee;
  border-radius: 8px;
}

.nav-bar-title {
  color: #333;
  font-size: 16px;
  font-weight: 550;
}

.message-bar {
  padding: 18px 0;
}
.message-type-item {
  flex-direction: column;
}
.message-type-icon {
  width: 45px;
  height: 45px;
}
.message-type-desc {
  margin-top: 6px;
  color: #333;
  font-size: 11px;
}

.private-chat-part {
  background: #fff;
}
.news-list {
  display: flex;
  align-items: center;
  padding: 24rpx;
  width: 100%;
  border-bottom: 1px solid #eee;
}
.news-list-icon {
  margin-right: 18rpx;
  width: 80rpx; 
  height: 80rpx;
  border-radius: 50%;
  background: #f5f6f8;
}
.news-list-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  height: 90rpx;
}
.title-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.news-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.news-time {
  color: #999;
  font-size: 22rpx;
}
.news-content-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content-desc {
  color: #999;
  font-size: 26rpx;
}
.news-unread {
  padding: 0 10rpx;
  height: 32rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 32rpx;
  background: #FD2D55;
  border-radius: 16rpx;
}

.swipe-cell-delete-btn {
  width: 65px;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  background: #FD2D55;
}

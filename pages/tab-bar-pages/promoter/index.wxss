.container {
  padding-bottom: 170rpx;
  font-size: 0;
  background: #fff;
  min-height: 100vh;
}
.bg {
  width: 100%;
  height: 700rpx;
}
.title {
  margin-left: 56rpx;
  width: 312rpx;
  height: 71rpx;
}

.content-wrap {
  position: relative;
  margin: 48rpx 32rpx;
  padding: 48rpx 48rpx 64rpx;
  background: #EEFCFE;
  border-radius: 32rpx;
}
.illus {
  position: absolute;
  top: -180rpx;
  right: 0;
  width: 498rpx;
  height: 366rpx;
}
.content-title {
  color: #141925;
  font-size: 48rpx;
  font-weight: 600;
}
.content-desc {
  color: #333;
  font-size: 36rpx;
  line-height: 1;
}
.content {
  margin-top: 12rpx;
  color: #666;
  font-size: 26rpx;
}
.content-second-title {
  margin-top: 32rpx;
  color: #141925;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1;
}

.rights-wrap {
  margin: 80rpx 32rpx 0;
  padding: 48rpx 0 24rpx;
  background: #EEFCFE;
  border-radius: 32rpx;
}
.rights-title {
  margin-left: 48rpx;
  color: #141925;
  font-size: 32rpx;
  font-weight: 600;
}
.rights-desc {
  margin: 8rpx 0 48rpx 48rpx;
  color: #333;
  font-size: 28rpx;
}
.rights-list {
  display: flex;
  margin-bottom: 32rpx;
}
.rights-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.rights-icon {
  width: 72rpx;
  height: 72rpx;
}
.rights-name {
  margin-top: 8rpx;
  color: #333;
  font-size: 24rpx;
}

.jion-us-btn {
  position: absolute;
  left: 50%;
  bottom: -38rpx;
  transform: translateX(-50%);
  width: 360rpx;
  height: 76rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  background: #000;
  border-radius: 38rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}

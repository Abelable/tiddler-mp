page {
  background: #fff;
}

.nav-bar {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.sign-in-icon {
  margin-left: 8px;
  width: 35px;
  height: 29.5px;
}

.promoter-icon {
  position: relative;
  margin-left: 8px;
  margin-right: 4px;
  width: 34px;
  height: 34px;
  font-size: 0;
}
.promoter-avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  border: 2px solid #fff;
}
.promoter-medal {
  position: absolute;
  right: -4px;
  bottom: -1px;
  width: 20px;
  height: 20px;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 8px;
  padding-left: 12px;
  width: 400rpx;
  height: 36px;
  border-radius: 18px;
  background: rgba(255,255,255,0.68);
  box-shadow: 0px 1px 12px 0px rgba(0,0,0,0.1);
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.search-icon {
  margin-right: 5px;
  width: 15px;
  height: 15px;
}
.placeholder {
  color: #666;
  font-size: 13px;
}

.container {
  position: absolute;
  padding-bottom: 138rpx;
  left: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
}

.banner-item {
  position: relative;
}
.banner-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100vw;
}

.category-list {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0 10rpx;
}
.category-item {
  font-size: 0;
  text-align: center;
}
.category-icon {
  width: 88rpx;
  height: 88rpx;
}
.category-desc {
  color: #999;
  font-size: 20rpx;
}

.product-list {
  padding: 20rpx;
}

.loading {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
}
.loading-icon {
  width: 48rpx;
  height: 48rpx;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

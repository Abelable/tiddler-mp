page {
  background: #fff;
}

.container {
  padding-bottom: calc(48px + env(safe-area-inset-bottom));
}

.nav-bar {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 8px;
  padding-left: 12px;
  width: 240px;
  height: 36px;
  border-radius: 18px;
  background: #fff;
  box-shadow: 0 10px 20px #f0f0f0;
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.search-icon {
  margin-right: 5px;
  width: 16px;
  height: 16px;
}
.placeholder {
  color: #666;
  font-size: 14px;
}

.banner-item {
  position: relative;
}
.banner-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100vw;
}

.category-wrap {
  display: flex;
  justify-content: space-around;
}
.category-item {
  text-align: center;
}
.category-icon {
  width: 86rpx;
  height: 86rpx;
}
.category-desc {
  color: #666;
  font-size: 20rpx;
}

.goods-list {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -10px 20px -2px #f0f0f0;
}
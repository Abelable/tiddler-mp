.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 180;
}

.ad-poster {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 11;
}
.ad-poster-img {
  width: 580rpx;
}
.close-icon {
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

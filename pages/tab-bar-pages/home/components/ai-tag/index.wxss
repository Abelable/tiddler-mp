.ai-tag {
  position: fixed;
  left: 50%;
  bottom: 160rpx;
  transform: translate(-50%);
  display: flex;
  align-items: center;
  width: 168rpx;
  height: 68rpx;
  border-radius: 24rpx;
  background-image: url('https://static.tiddler.cn/mp/ai/tag_bg.png');
  background-size: 168rpx 68rpx;
  background-repeat: no-repeat;
  z-index: 80;
  transition: all 0.4s ease;
}
.ai-tag.small {
  width: 68rpx;
  border-radius: 50%;
  opacity: 0.8;
}

.robot-avatar-wrap, .robot-avatar {
  width: 68rpx;
  height: 68rpx;
}
.robot-avatar-wrap {
  transform-origin: center bottom;
  animation: floatY 3s ease-in-out infinite;
}
.robot-avatar {
  transform-origin: center bottom;
  animation: swing1 2.5s ease-in-out infinite,
             swing2 3.5s ease-in-out infinite,
             swing3 4.5s ease-in-out infinite;
}
@keyframes floatY {
  0%, 100% { transform: translateY(2rpx); }
  50%      { transform: translateY(-2rpx); }
}
@keyframes swing1 {
  0%, 100% { transform: rotate(0deg); }
  50%      { transform: rotate(4deg); }
}

@keyframes swing2 {
  0%, 100% { transform: rotate(0deg); }
  50%      { transform: rotate(-3deg); }
}
@keyframes swing3 {
  0%, 100% { transform: rotate(0deg); }
  20%      { transform: rotate(4deg); }
  40%      { transform: rotate(-5deg); }
  60%      { transform: rotate(3deg); }
  80%      { transform: rotate(-4deg); }
}

.tag-title-swiper {
  position: relative;
  display: flex;
  align-items: center;
  flex: 1;
  height: 68rpx;
  overflow: hidden;
  transition: all 0.4s ease;
}
.tag-title-swiper.hide {
  flex: 0;
  height: 0;
  opacity: 0;
  transform: scale(0.6);
}
.tag-title {
  position: absolute;
  width: 100%;
  color: #fff;
  font-size: 22rpx;
  font-weight: bolder;
  opacity: 0;
  transform: translateY(100%) scale(1.2);
  animation: slideUp 9s infinite;
}
.tag-title:nth-child(1) { animation-delay: 0s; }
.tag-title:nth-child(2) { animation-delay: 3s; }
.tag-title:nth-child(3) { animation-delay: 6s; }
@keyframes slideUp {
  0%   { opacity: 0; transform: translateY(100%) scale(1.2); }
  10%  { opacity: 1; transform: translateY(0) scale(1); }
  30%  { opacity: 1; transform: translateY(0) scale(1); }
  40%  { opacity: 0; transform: translateY(-100%) scale(0.8);}
  100% { opacity: 0; transform: translateY(-100%) scale(0.8);}
}
.tag-title-swiper.hide .tag-title {
  font-size: 0;
}

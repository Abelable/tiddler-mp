.ai-tag {
  position: fixed;
  left: 50%;
  bottom: 160rpx;
  transform: translate(-50%);
  display: flex;
  align-items: center;
  width: 168rpx;
  height: 68rpx;
  border-radius: 24rpx;
  background-image: url('https://static.tiddler.cn/mp/ai/tag_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  z-index: 100;
}
.robot-avatar {
  display: block;
  width: 68rpx;
  height: 68rpx;
  transform-origin: center bottom;
  animation: swing1 3s ease-in-out infinite,
             swing2 4s ease-in-out infinite,
             swing3 5s ease-in-out infinite;
}

@keyframes swing1 {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(4deg); }
}

@keyframes swing2 {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(-3deg); }
}

@keyframes swing3 {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(2deg); }
  75% { transform: rotate(-2deg); }
}


.tag-title-swiper {
  position: relative;
  flex: 1;
  height: 68rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.tag-title {
  position: absolute;
  width: 100%;
  color: #fff;
  font-size: 22rpx;
  font-weight: bolder;
  opacity: 0;
  transform: translateY(100%) scale(1.2);
  animation: slideUp 9s infinite;
}

.tag-title:nth-child(1) { animation-delay: 0s; }
.tag-title:nth-child(2) { animation-delay: 3s; }
.tag-title:nth-child(3) { animation-delay: 6s; }

@keyframes slideUp {
  0%   { opacity: 0; transform: translateY(100%) scale(1.2); }
  10%  { opacity: 1; transform: translateY(0) scale(1); }
  30%  { opacity: 1; transform: translateY(0) scale(1); }
  40%  { opacity: 0; transform: translateY(-100%) scale(0.8);}
  100% { opacity: 0; transform: translateY(-100%) scale(0.8);}
}

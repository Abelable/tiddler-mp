
.top-media-wrap {
  position: relative;
  margin-bottom: 15rpx;
  height: 420rpx;
  border-radius: 18rpx;
  overflow: hidden;
}
.top-media {
  position: relative;
}
.top-media-cover {
  width: 100%;
  height: 420rpx;
  border-radius: 18rpx;
}

.top-media-time {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.time-date {
  font-size: 44rpx;
  font-weight: bolder;
}
.time-split {
  margin: 0 12rpx;
  width: 8rpx;
  height: 40rpx;
  border-radius: 4rpx;
  background: var(--theme-color);
}
.time-month, .time-year {
  font-size: 18rpx;
  line-height: 1;
}
.time-year {
  margin-top: 4rpx;
}
.top-desc {
  margin-left: 12rpx;
  width: 132rpx;
  height: 50rpx;
}

.top-media-menu {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx;
  height: 420rpx;
  backdrop-filter: blur(10px);
}
.top-media-menu-item {
  width: 86rpx;
  height: 68rpx;
  border-radius: 18rpx;
}
.top-media-menu-item.active {
  position: relative;
}
.top-media-menu-item.active::after {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  content: "";
  border-radius: 16rpx;
  border: 6rpx solid var(--theme-color);
  box-sizing: border-box;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single {
  -webkit-line-clamp: 1;
}

.product-item {
  margin-bottom: 16rpx;
  background: #00B2FF;
  border-radius: 38rpx;
  overflow: hidden;
}

.header {
  position: relative;
  height: 400rpx;
  font-size: 0;
}
.bg {
  width: 100%;
  height: 100%;
}
.more-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 18rpx;
  padding-right: 12rpx;
  height: 48rpx;
  color: #fff;
  font-size: 22rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 24px;
}
.arrow {
  margin-left: 6rpx;
  width: 16rpx;
  height: 16rpx;
}
.product-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 68rpx 32rpx 24rpx;
  width: 100%;
  background: linear-gradient(180deg, rgba(0, 178, 255, 0) 0%, rgba(0, 178, 255, 1) 100%);
}
.product-name {
  color: #fff;
  font-size: 42rpx;
  font-weight: 500;
}

.address-info {
  display: flex;
  margin-top: 4rpx;
  color: #fff;
  font-size: 22rpx;
}
.address-icon {
  margin-right: 2rpx;
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}
.address-distance {
  flex: 1;
  white-space: nowrap;
}

.media-list {
  display: flex;
  padding: 0 32rpx 32rpx;
}

.sk-container {
  padding: 0 20rpx;
  background: #fff;
}

.sk-banner {
  margin-top: 145;
  height: 200rpx;
  border-radius: 40rpx;
}

.sk-fall-flow {
  display: flex;
  justify-content: space-between;
}
.sk-media-item {
  width: 350rpx;
  height: 520rpx;
  border-radius: 32rpx;
}

.sk-animate {
  background: #f2f3f5;
  animation: blink 1.2s ease-in-out infinite;
}
@keyframes blink {
  50% {
    opacity: 0.6;
  }
}

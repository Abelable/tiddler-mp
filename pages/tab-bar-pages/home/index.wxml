<import src="index.skeleton.wxml"/>
<template is="skeleton" wx:if="{{!pageLoaded}}" />

<view class="nav-bar {{navBarActive[curMenuIndex] ? 'active': ''}}" style="padding-top: {{statusBarHeight}}px">
  <view class="menu-tabs-wrap">
    <view style="flex: 1">
      <!-- <image class="sign-in-icon" src="https://static.tiddler.cn/mp/sign_in.png" /> -->
      <view class="promoter-icon" wx:if="{{!userInfo.promoterInfo && superiorInfo}}">
        <image class="promoter-avatar" src="{{superiorInfo.avatar}}" />
        <image class="promoter-medal" src="https://static.tiddler.cn/mp/promoter/level_{{superiorInfo.promoterInfo.level}}/medal.gif" />
      </view>
    </view>
    <view class="menu-tabs">
      <view 
        wx:for="{{['关注', '发现', '附近']}}" 
        wx:key="index" 
        class="menu-tab {{curMenuIndex === index ? 'active' : ''}}" 
        bindtap="switchMenu" 
        data-index="{{index}}"
      >
        {{item}}
      </view>
    </view>
    <view style="flex: 1" />
  </view>
  <view class="search-bar {{navBarActive[curMenuIndex] ? 'active': ''}}" bindtap="search">
    <view class="placeholder">搜索达人打卡景点、酒店...</view>
    <view class="search-btn">
      <image style="width: 20px; height: 20px;" src="https://static.tiddler.cn/mp/home/search_white.png" />
    </view>
  </view>
</view>

<swiper wx:if="{{pageLoaded}}" class="container" current="{{curMenuIndex}}" bindchange="swiperChange">
  <swiper-item>
    <scroll-view 
      class="content-wrap" 
      style="padding-top: {{statusBarHeight + 96}}px;"
      refresher-triggered="{{followRefreshing}}"
      bindrefresherrefresh="onRefresh"
      bindscrolltolower="onLoadMore"
      scroll-top="{{scrollTopList[0]}}"
      bindscroll="onPageScroll"
      refresher-enabled
      scroll-y
      scroll-with-animation
    >
      <view class="content">
        <follow-media-item wx:for="{{followMediaList}}" wx:key="index" item="{{item}}" />
        <view class="loading row center" wx:if="{{followMediaList.length && followLoading}}">
          <image class="loading-icon" src="https://static.tiddler.cn/mp/loading.gif" />
          <text>正在加载</text>
        </view>
        <view class="no-more-tips" wx:if="{{followFinished && followMediaList.length}}">～没有更多啦～</view>
        <empty-illus 
          wx:if="{{!userInfo || (followFinished && !followMediaList.length)}}" 
          desc="{{userInfo ? '暂无关注列表' : '您还未登录'}}" 
        >
          <view class="login-btn row center" wx:if="{{!userInfo}}" bindtap="register">点击登录</view>
        </empty-illus>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view 
      class="content-wrap" 
      style="padding-top: {{statusBarHeight + 96}}px;"
      refresher-triggered="{{refreshing}}"
      bindrefresherrefresh="onRefresh"
      bindscrolltolower="onLoadMore"
      scroll-top="{{scrollTopList[1]}}"
      bindscroll="onPageScroll"
      refresher-enabled
      scroll-y
      scroll-with-animation
    >
      <view class="content">
        <view class="banner-wrap">
          <swiper 
            class="banner" 
            wx:if="{{bannerList.length}}"
            bindchange="bannerChange"
            autoplay 
            circular 
          >
            <swiper-item 
              class="banner-item"
              wx:for="{{bannerList}}"
              wx:key="index"
              bindtap="linkTo"
              data-scene="{{item.scene}}"
              data-param="{{item.param}}"
            >
              <image class="banner-img" src="{{item.cover}}" mode="aspectFill" lazy-load />
            </swiper-item>
          </swiper>
          <view class="banner-dots" style="width: {{12 * bannerList.length}}px;" wx:if="{{bannerList.length > 1}}">
            <view class="banner-dot" style="left: {{12 * curDot}}px" />
          </view>
        </view>
        <view class="classification-list row between">
          <view 
            class="classification-item" 
            wx:for="{{classificationList}}" 
            wx:key="index"
            bindtap="checkClassification"
            data-index="{{index}}"
          >
            <image class="classification-icon" src="https://static.tiddler.cn/mp/home/{{item.icon}}.png" />
            <view class="classification-name">{{item.name}}</view>
          </view>
        </view>
        <top-media mediaList="{{topMediaList}}" />
        <fall-flow 
          class="fall-flow" 
          list="{{mediaList}}" 
          loading="{{loading}}"
          finished="{{finished}}"
          generic:item="media-item" 
        />
        <empty-illus wx:if="{{finished && !mediaList.length}}" desc="暂无游记" />
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view 
      class="content-wrap" 
      style="padding-top: {{statusBarHeight + 96}}px;"
      refresher-triggered="{{nearbyRefreshing}}"
      bindrefresherrefresh="onRefresh"
      bindscrolltolower="onLoadMore"
      scroll-top="{{scrollTopList[2]}}"
      bindscroll="onPageScroll"
      refresher-enabled
      scroll-y
      scroll-with-animation
    >
      <view class="content" style="margin-top: 4px;">
        <fall-flow 
          class="fall-flow" 
          list="{{nearbyMediaList}}" 
          loading="{{nearbyLoading}}"
          finished="{{nearbyFinished}}"
          generic:item="media-item" 
          showDistance
        />
        <view class="no-more-tips" wx:if="{{nearbyFinished && nearbyMediaList.length}}">～没有更多啦～</view>
        <empty-illus 
          wx:if="{{nearbyFinished && !nearbyMediaList.length}}" 
          desc="暂无附近游记" 
        >
          <view class="postioning-btn row center" bindtap="openLocationSetting">开启定位</view>
        </empty-illus>
      </view>
    </scroll-view>
  </swiper-item>
</swiper>

<ai-tag scrolling="{{scrolling}}" />

<ad-modal wx:if="{{adModalVisible}}" info="{{adInfo}}" bind:hide="hideAdModal" />

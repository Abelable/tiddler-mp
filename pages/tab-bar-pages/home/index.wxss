@import "./index.skeleton.wxss";

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.menu-tabs-wrap {
  display: flex;
  align-items: center;
  padding: 0 8px;
  height: 44px;
}
.menu-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 44px;
}
.menu-tab {
  width: 50px;
  color: #666;
  font-size: 15px;
  font-weight: 500;
  text-align: center;
}
.menu-tab.active {
  color: #000;
  font-size: 18px;
  font-weight: 600;
}

.sign-in-icon {
  width: 35px;
  height: 29.5px;
}

.promoter-icon {
  position: relative;
  width: 34px;
  height: 34px;
  font-size: 0;
}
.promoter-avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  border: 2px solid #fff;
}
.promoter-medal {
  position: absolute;
  right: -4px;
  bottom: -1px;
  width: 20px;
  height: 20px;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8px;
  margin-top: 4px;
  padding-left: 16px;
  padding-right: 8px;
  height: 40px;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0 2px 20px #f0f0f0;
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.placeholder {
  color: #666;
  font-size: 14px;
}
.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 26px;
  border-radius: 15px;
  background: var(--blue-1);
}

.container {
  height: 100vh;
}
.content-wrap {
  height: 100vh;
  overflow-y: scroll;
  background: #fff;
}
.content {
  padding: 0 20rpx 138rpx;
  min-height: 100%;
}

.banner-wrap {
  position: relative;
  margin: 8rpx 0 20rpx;
  height: 200rpx;
}
.banner {
  height: 200rpx;
}
.banner-item {
  border-radius: 40rpx;
}
.banner-img {
  width: 100%;
  height: 100%;
}
.banner-dots {
  position: absolute;
  left: 50%;
  bottom: 12rpx;
  transform: translateX(-50%);
  height: 4rpx;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.5);
}
.banner-dot {
  position: absolute;
  top: 0;
  width: 12px;
  height: 4rpx;
  border-radius: 4rpx;
  background: #fff;
  transition: left .4s ease;
}

.classification-list {
  margin: 32rpx 24rpx;
}
.classification-item {
  font-size: 0;
  text-align: center;
}
.classification-icon {
  width: 68rpx;
  height: 68rpx;
}
.classification-name {
  margin-top: 4rpx;
  color: #333;
  font-size: 20rpx;
}

.login-btn, .postioning-btn {
  margin-top: 24rpx;
  width: 160rpx;
  height: 56rpx;
  color: #fff;
  font-size: 24rpx;
  background: var(--blue-1);
  border-radius: 28rpx;
}

.loading {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
}
.loading-icon {
  width: 48rpx;
  height: 48rpx;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

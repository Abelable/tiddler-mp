.container {
  padding-bottom: calc(48px + env(safe-area-inset-bottom));
}

.nav-bar {
  position: fixed;
  width: 100%;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.menu-tabs-wrap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 44px;
}
.notice-center-icon {
  position: absolute;
  top: 50%;
  left: 8px;
  transform: translateY(-50%);
  width: 24px;
  height: 24px;
}
.menu-tabs {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100px;
  height: 44px;
}
.menu-tab {
  width: 50px;
  color: #666;
  font-size: 15px;
  font-weight: 500;
  text-align: center;
}
.menu-tab.active {
  color: #000;
  font-size: 18px;
  font-weight: 600;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8px;
  padding-left: 16px;
  padding-right: 8px;
  height: 40px;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0 10px 20px #f0f0f0;
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.placeholder {
  color: #666;
  font-size: 14px;
}
.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 26px;
  border-radius: 15px;
  background: var(--theme-color);
}

.content-wrap {
  padding: 0 20rpx;
}

.top-media-wrap {
  position: relative;
  margin-bottom: 15rpx;
  height: 420rpx;
  border-radius: 18rpx;
  overflow: hidden;
}
.top-media {
  position: relative;
}
.top-media-cover {
  width: 100%;
  height: 420rpx;
  border-radius: 18rpx;
}

.top-media-time {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  display: flex;
  align-items: center;
  color: #fff;
}
.time-date {
  font-size: 44rpx;
  font-weight: bolder;
}
.time-split {
  margin: 0 12rpx;
  width: 8rpx;
  height: 40rpx;
  border-radius: 4rpx;
  background: var(--theme-color);
}
.time-month, .time-year {
  font-size: 18rpx;
  line-height: 1;
}
.time-year {
  margin-top: 4rpx;
}
.top-desc {
  margin-left: 12rpx;
  width: 132rpx;
  height: 50rpx;
}

.top-media-menu {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx;
  height: 420rpx;
  backdrop-filter: blur(10px);
}
.top-media-menu-item {
  width: 86rpx;
  height: 68rpx;
  border-radius: 18rpx;
}
.top-media-menu-item.active {
  position: relative;
}
.top-media-menu-item.active::after {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  content: "";
  border-radius: 16rpx;
  border: 6rpx solid var(--theme-color);
  box-sizing: border-box;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

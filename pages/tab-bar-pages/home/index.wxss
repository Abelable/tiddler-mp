.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.active {
  background: #fff;
}

.menu-tabs-wrap {
  display: flex;
  align-items: center;
  padding: 0 8px;
  height: 44px;
}
.menu-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 44px;
}
.menu-tab {
  width: 50px;
  color: #666;
  font-size: 15px;
  font-weight: 500;
  text-align: center;
}
.menu-tab.active {
  color: #000;
  font-size: 18px;
  font-weight: 600;
}

.sign-in-icon {
  width: 35px;
  height: 29.5px;
}

.promoter-icon {
  position: relative;
  width: 38px;
  height: 38px;
}
.promoter-avatar {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  border: 2px solid #fff;
}
.promoter-medal {
  position: absolute;
  right: -4px;
  bottom: -2px;
  width: 24px;
  height: 24px;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8px;
  margin-top: 4px;
  padding-left: 16px;
  padding-right: 8px;
  height: 40px;
  border-radius: 20px;
  background: #fff;
  box-shadow: 0 10px 20px #f0f0f0;
}
.search-bar.active {
  background: #f5f6f7;
  box-shadow: none;
}
.placeholder {
  color: #666;
  font-size: 14px;
}
.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 26px;
  border-radius: 15px;
  background: var(--blue-1);
}

.container {
  height: 100vh;
}
.content-wrap {
  height: 100vh;
  overflow-y: scroll;
}
.content {
  padding: 0 20rpx calc(58px + env(safe-area-inset-bottom));
  min-height: 100%;
}

.type-list {
  margin: 18rpx 24rpx 32rpx;
}
.type-item {
  font-size: 0;
  text-align: center;
}
.type-icon {
  width: 68rpx;
  height: 68rpx;
}
.type-name {
  color: #333;
  font-size: 20rpx;
}


.loading {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
}
.loading-icon {
  width: 48rpx;
  height: 48rpx;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

<wxs module="NUM" src="/utils/filters/num.wxs" />
<wxs module="ARRAY" src="/utils/filters/array.wxs" />

<view class="nav-bar row" style="padding-top: {{statusBarHeight}}px;">
  <image class="nav-bg" wx:if="{{navBarVisible}}" src="{{userInfo.bg ? (userInfo.bg + '?x-oss-process=image/format,webp') : 'https://static.tiddler.cn/mp/bg.webp'}}" />
  <view class="bg-cover" wx:if="{{navBarVisible}}" />
  <view class="mine-avatar-wrap" wx:if="{{navBarVisible}}">
    <image class="mine-avatar" src="{{userInfo.avatar ? (userInfo.avatar + '?x-oss-process=image/format,webp') : 'https://static.tiddler.cn/mp/default_avatar.png'}}" />
    <image 
      class="mine-medal" 
      wx:if="{{userInfo.promoterInfo}}" 
      src="https://static.tiddler.cn/mp/promoter/level_{{userInfo.promoterInfo.level}}/medal.gif" 
    />
  </view>
  <view class="mine-name" wx:if="{{navBarVisible}}">{{userInfo.nickname}}</view>
</view>

<view class="container">
  <image class="bg" src="{{userInfo.bg ? (userInfo.bg + '?x-oss-process=image/format,webp') : 'https://static.tiddler.cn/mp/bg.webp'}}" bindtap="navToUserInfoSetting" mode="aspectFill" />
  <view class="content">
    <view class="user-info-wrap">
      <view class="avatar-wrap">
        <image class="avatar" bindtap="navToUserInfoSetting" src="{{userInfo.avatar ? (userInfo.avatar + '?x-oss-process=image/format,webp') : 'https://static.tiddler.cn/mp/default_avatar.png'}}" />
        <image 
          class="promoter-medal" 
          wx:if="{{userInfo.promoterInfo}}" 
          src="https://static.tiddler.cn/mp/promoter/level_{{userInfo.promoterInfo.level}}/medal.gif" 
        />
      </view>
      <view class="data-wrap">
        <view class="data-item">
          <view class="data-title">获赞</view>
          <view class="data">{{userInfo ? NUM.over(userInfo.beLikedTimes, 100000) : 0}}</view>
        </view>
        <view class="data-item" bindtap="checkFollowList">
          <view class="data-title">关注</view>
          <view class="data">{{userInfo ? NUM.over(userInfo.followedAuthorNumber, 100000) : 0}}</view>
        </view>
        <view class="data-item" bindtap="checkFanList">
          <view class="data-title">粉丝</view>
          <view class="data">{{userInfo ? NUM.over(userInfo.fansNumber, 100000) : 0}}</view>
        </view>
      </view>
    </view>
    <view class="name" bindtap="navToUserInfoSetting">{{userInfo.nickname}}</view>
    <view class="introduce row" wx:if="{{userInfo}}" bindtap="navToUserInfoSetting">
      <text>{{ userInfo.signature || '点击添加签名，让大家了解你～' }}</text>
      <image class="edit-icon" wx:if="{{!userInfo.signature}}" src="https://img.ubo.vip/tiddler/mine/edit.png" />
    </view>

    <view class="tool-wrap {{toolList.length > 5 ? 'overflow' : ''}}">
      <view 
        class="tool-item" 
        wx:for="{{showAllTools ? toolList : ARRAY.slice(toolList, 0, 5)}}" 
        wx:key="index" 
        bindtap="navTo" 
        data-type="{{item.icon}}"
      >
        <view class="tool-icon-wrap">
          <image class="tool-icon" src="https://static.tiddler.cn/mp/mine/{{item.icon}}.png?x-oss-process=image/format,webp" />
          <view class="total-spot" wx:if="{{index === 0 && orderTotal > 0}}" />
        </view>
        <view class="tool-desc">{{item.name}}</view>
      </view>
    </view>

    <view class="tool-visible-bar" wx:if="{{toolList.length > 5}}" bindtap="toggleToolsVisible">
      <image class="visible-arrow" src="./images/{{showAllTools ? 'up' : 'down'}}_arrow.png" />
    </view>

    <view class="works-wrap {{menuFixed ? 'fixed' : '' }}">
      <view class="works-menu {{menuFixed ? 'fixed' : '' }}" style="top: {{menuFixed ? statusBarHeight + 44 : 0}}px;">
        <view 
          wx:for="{{['视频游记', '图文游记', '收藏', '点赞']}}" 
          wx:key="index" 
          class="works-menu-item {{curMenuIndex === index ? 'active' : ''}}" 
          bindtap="switchMenu" 
          data-index="{{index}}"
        >
          {{item}}
        </view>
        <view class="active-underline" style="left: {{curMenuIndex * 25}}vw;"></view>
      </view>
      <swiper style="height: {{wrapHeightList[curMenuIndex]}}px;" current="{{curMenuIndex}}" bindchange="swiperChange">
        <swiper-item>
          <view class="content-wrap">
            <view class="total-info row between">
              <view class="total-tips">共{{videoListTotal}}条视频游记</view>
              <button class="add-btn" bindtap="navToVideoCreate" hover-class="none">
                <image class="add-icon" src="https://img.ubo.vip/tiddler/mine/add.png" />
                <text>视频游记</text>
              </button>
            </view>
            <fall-flow 
              class="fall-flow-0" 
              list="{{videoList}}" 
              loading="{{videoLoading}}"
              finished="{{videoFinished}}"
              mediaScene="{{3}}" 
              generic:item="video-item" 
              bind:finish="setWrapHeight" 
            />
            <empty-illus 
              wx:if="{{!userInfo || !videoList.length}}" 
              desc="{{userInfo ? '暂无作品，快去发布吧' : '您还未登录'}}" 
              height="520rpx"
            >
              <view class="login-btn row center"  wx:if="{{!userInfo}}" bindtap="register">点击登录</view>
            </empty-illus>
          </view>
        </swiper-item>
        <swiper-item>
          <view class="content-wrap">
            <view class="total-info row between">
              <view class="total-tips">共{{noteListTotal}}条图文游记</view>
              <button class="add-btn" bindtap="navToNoteCreate" hover-class="none">
                <image class="add-icon" src="https://img.ubo.vip/tiddler/mine/add.png" />
                <text>图文游记</text>
              </button>
            </view>
            <fall-flow 
              class="fall-flow-1" 
              list="{{noteList}}" 
              loading="{{noteLoading}}"
              finished="{{noteFinished}}"
              mediaScene="{{3}}" 
              generic:item="note-item" 
              bind:finish="setWrapHeight" 
            />
            <empty-illus 
              wx:if="{{!userInfo || !noteList.length}}" 
              desc="{{userInfo ? '暂无作品，快去发布吧' : '您还未登录'}}" 
              height="520rpx" 
            >
              <view class="login-btn row center" wx:if="{{!userInfo}}" bindtap="register">点击登录</view>
            </empty-illus>
          </view>
        </swiper-item>
        <swiper-item>
          <view class="content-wrap">
            <fall-flow 
              class="fall-flow-2" 
              list="{{collectMediaList}}" 
              loading="{{collectLoading}}"
              finished="{{collectFinished}}"
              mediaScene="{{4}}" 
              generic:item="media-item" 
              bind:finish="setWrapHeight" 
            />
            <empty-illus 
              wx:if="{{!userInfo || !collectMediaList.length}}" 
              desc="{{userInfo ? '您还未收藏任何作品' : '您还未登录'}}" 
              height="520rpx" 
            >
              <view class="login-btn row center" wx:if="{{!userInfo}}" bindtap="register">点击登录</view>
            </empty-illus>
          </view>
        </swiper-item>
        <swiper-item>
          <view class="content-wrap">
            <fall-flow 
              class="fall-flow-3" 
              list="{{likeMediaList}}" 
              loading="{{likeLoading}}"
              finished="{{likeFinished}}"
              mediaScene="{{5}}" 
              generic:item="media-item" 
              bind:finish="setWrapHeight" 
            />
            <empty-illus 
              wx:if="{{!userInfo || !likeMediaList.length}}" 
              desc="{{userInfo ? '您还未点赞任何作品' : '您还未登录'}}" 
              height="520rpx" 
            >
              <view class="login-btn row center" wx:if="{{!userInfo}}" bindtap="register">点击登录</view>
            </empty-illus>
          </view>
        </swiper-item>
      </swiper>
    </view>
  </view>
</view>

<auth-info-popup show="{{authInfoPopupVisible}}" bind:hide="hideAuthInfoPopup" />

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  box-sizing: initial;
  background: linear-gradient(90deg, #1895F5 0%, #097FE6 100%);
  z-index: 100;
}
.user-avatar {
  margin-left: 20px;
  width: 26px;
  height: 26px;
  border-radius: 50%;
}
.user-name {
  margin-left: 8px;
  color: #fff;
  font-size: 16px;
  font-weight: bold;
}

.container {
  position: relative;
  font-size: 0;
  overflow: hidden;
  padding-bottom: calc(48px + env(safe-area-inset-bottom));
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.content {
  position: relative;
  margin-top: 260rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #f5f6f8;
}
.avatar-wrap {
  position: absolute;
  top: -36rpx;
  display: flex;
  align-items: center;
  padding-left: 36rpx;
  width: 100%;
}
.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 10rpx solid #f5f6f8;
  background: #f5f6f8;
}
.data-wrap {
  display: flex;
  flex: 1;
}
.data-item {
  flex: 1;
  border-right: 1rpx solid #e8e8e8;
  text-align: center;
}
.data-item:last-child {
  border-right: none;
}
.data-title {
  color: #666;
  font-size: 22rpx;
}
.data {
  margin-top: 6rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.name {
  padding: 160rpx 36rpx 0;
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
}
.introduce {
  padding-top: 6rpx;
  padding-left: 36rpx;
  color: #666;
  font-size: 24rpx;
}

.function-wrap {
  display: flex;
  flex-wrap: wrap;
  margin: 40rpx 0 8rpx;
}
.function-item {
  margin-bottom: 32rpx;
  width: 20%;
  text-align: center;
}
.function-icon {
  width: 60rpx;
  height: 60rpx;
}
.function-desc {
  margin-top: 6rpx;
  color: #666;
  font-size: 20rpx;
}

.works-wrap {
  background: #fff;
  box-shadow: 0 -10px 20px -2px #f0f0f0;
}
.works-wrap.fixed {
  padding-top: 80rpx;
}
.works-menu {
  position: relative;
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}
.works-menu.fixed {
  position: fixed;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 100;
}
.works-menu-item {
  flex: 1;
  height: 80rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
}
.works-menu-item.active {
  color: #333;
  font-weight: bold;
}
.active-underline {
  position: absolute;
  bottom: 0;
  width: 25vw;
  height: 4rpx;
  background: var(--theme-color);
  transition: left .2s ease;
}

.content-wrap {
  padding: 0 20rpx;
}

.total-info {
  padding: 20rpx 0;
}
.total-tips {
  color: #666;
  font-size: 24rpx;
}
.add-btn {
  padding: 0 16rpx;
  height: 46rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 1;
  border: 1px solid #ddd;
  border-radius: 23rpx;
}
.add-icon {
  margin-right: 6rpx;
  width: 20rpx;
  height: 20rpx;
}

.no-more-tips {
  padding: 16rpx 0 24rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

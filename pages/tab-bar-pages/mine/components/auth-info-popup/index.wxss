.user-info-popup {
  padding: 32rpx;
  padding-bottom: 170rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.app-name {
  margin-left: 12rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}
.apply-tips {
  margin-left: 24rpx;
  color: #666;
  font-size: 32rpx;
  font-weight: 340;
}

.apply-info-title {
  margin-top: 18rpx;
  color: #333;
  font-size: 35rpx;
  font-weight: 500;
}
.apply-info-desc {
  margin-top: 18rpx;
  color: #666;
  font-size: 26rpx;
  font-weight: 340;
}

.auth-modal-list-wrap {
  margin-top: 32rpx;
}
.auth-modal-list {
  display: flex;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #f5f5f5;
}
.modal-list-title {
  margin-right: 60rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.avatar-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  height: 100rpx;
}
.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.avatar-arrow {
  width: 24rpx;
  height: 24rpx;
}
.nickname-input {
  flex: 1;
  font-size: 28rpx;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  height: 88rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 44rpx;
  background: var(--blue-1);
}

.cancel-btn {
  margin-top: 24rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 340;
  text-align: center;
}
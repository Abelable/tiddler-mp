.tab-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 108rpx;
  box-sizing: initial;
  border-radius: 58rpx 58rpx 0 0;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
  box-shadow: 0 -1px 12px 0 rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.tab {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.icon {
  width: 48rpx;
  height: 48rpx;
}
.text {
  margin-top: 8rpx;
  font-size: 18rpx;
  color: #707070;
  line-height: 1;
}
.text.selected {
  color: #333;
  font-weight: 500;
}

.promoter-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #00A5FF, #23d5ab);
  background-size: 400% 400%;
  animation: gradientBG 5s ease infinite;
}
@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
.promoter-icon {
  margin-bottom: 2rpx;
  width: 50rpx;
  height: 50rpx;
}

.tab-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  height: 48px;
  box-sizing: initial;
  background: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0,0,0,0.05);
  z-index: 100;
}

.tab {
  position: relative;
  flex: 1;
  font-size: 0;
  text-align: center;
}

.icon {
  width: 24px;
  height: 24px;
}
.icon.notice {
  margin-bottom: 2px;
  width: 21px;
  height: 21px;
}

.text {
  font-size: 10px;
  color: #666;
}
.text.selected {
  color: #333;
}

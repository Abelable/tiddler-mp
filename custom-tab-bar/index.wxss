.tab-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  height: 48px;
  box-sizing: initial;
  background: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0,0,0,0.05);
  z-index: 100;
}

.tab {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.icon {
  width: 24px;
  height: 24px;
}
.text {
  font-size: 10px;
  color: #666;
}
.text.selected {
  color: #333;
}

.promoter-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #00A5FF, #23d5ab);
  background-size: 400% 400%;
  animation: gradientBG 5s ease infinite;
}
@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
.promoter-icon {
  width: 55rpx;
  height: 55rpx;
}

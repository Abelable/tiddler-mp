function slice(target, length, replaceString) {
  replaceString = replaceString || "...";
  return target.length > length
    ? target.slice(0, length) + replaceString
    : target;
}

function trim(string) {
  return string.split(" ").join("");
}

function nicknameFilter(nickname) {
  if (nickname.length === 1) {
    return "*";
  } else if (nickname.length === 2) {
    return nickname.slice(0, 1) + "*";
  } else if (nickname.length === 3) {
    return nickname.slice(0, 1) + "*" + nickname.slice(-1);
  } else {
    return nickname.slice(0, 1) + "**" + nickname.slice(-1);
  }
}

function codeFilter(code) {
  return code.slice(0, 4) + " " + code.slice(4, 8) + " " + code.slice(8, 12);
}

module.exports = {
  slice: slice,
  trim: trim,
  nicknameFilter: nicknameFilter,
  codeFilter: codeFilter
};

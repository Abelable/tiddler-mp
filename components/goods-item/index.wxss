.row {
  display: flex;
  align-items: center;
}
.row.between {
  justify-content: space-between;
}
.row.baseline {
  align-items: baseline;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single {
  -webkit-line-clamp: 1;
}

.goods-item {
  margin-bottom: 12rpx;
  width: 350rpx;
  font-size: 0;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  opacity: 0;
}
.goods-item.show {
  opacity: 1;
  transition: opacity .2s ease;
}

.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
}
.cover-wrap.show-tag {
  border-radius: 32rpx;
}
.cover {
  width: 350rpx;
}

.type-label {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  padding: 0 12rpx;
  height: 34rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
  background: #FF5A6F;
}

.content {
  padding: 18rpx;
}

.goods-name {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.goods-tag {
  padding: 1rpx 10rpx;
  height: 33rpx;
  color: #ef3741;
  font-size: 22rpx;
  line-height: 33rpx;
  font-weight: 500;
  text-align: center;
  vertical-align: text-bottom;
  border-radius: 8rpx;
  background: #fce4e6;
}

.info-wrap {
  margin-top: 12rpx;
}
.sales-volume {
  color: #888;
  font-size: 22rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.shop-info {
  padding: 18rpx 0 0;
}
.shop-logo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.shop-name {
  margin: 0 12rpx;
  flex: 1;
  color: #333;
  font-size: 22rpx;
}

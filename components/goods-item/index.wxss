.row {
  display: flex;
  align-items: center;
}
.row.between {
  justify-content: space-between;
}
.row.baseline {
  align-items: baseline;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single {
  -webkit-line-clamp: 1;
}

.goods-item {
  margin-bottom: 12rpx;
  width: 350rpx;
  font-size: 0;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  opacity: 0;
}
.goods-item.show {
  opacity: 1;
  transition: opacity .2s ease;
}

.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 32rpx;
  overflow: hidden;
}
.cover-wrap.gift {
  border: 4px solid #C6EFFF;
  border-radius: 32rpx;
}
.gift-header {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  padding-top: 2rpx;
  width: 240rpx;
  height: 43rpx;
  color: #333;
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
  background-image: url('https://static.tiddler.cn/mp/gift/gift_header_bg.png');
  background-size: 100%;
  background-repeat: no-repeat;
}
.duration {
  color: var(--blue-1);
  font-size: 24rpx;
  font-weight: bolder;
}
.cover {
  width: 350rpx;
}

.type-label {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  padding: 0 12rpx;
  height: 34rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
  background: #FF5A6F;
}

.content {
  padding: 18rpx;
}

.goods-name {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.self-support-icon {
  margin-right: 8rpx;
  margin-bottom: 4rpx;
  vertical-align: bottom;
  width: 52rpx;
  height: 30rpx;
}

.info-wrap {
  margin-top: 12rpx;
}
.sales-volume {
  color: #888;
  font-size: 22rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.shop-info {
  padding: 18rpx 0 0;
}
.shop-logo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.shop-name {
  margin: 0 12rpx;
  flex: 1;
  color: #333;
  font-size: 22rpx;
}

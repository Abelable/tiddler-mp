.goods-item {
  margin-bottom: 10rpx;
  width: 350rpx;
  font-size: 0;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  opacity: 0;
}
.goods-item.show {
  opacity: 1;
  transition: opacity .2s ease;
}

.cover {
  width: 350rpx;
}

.content {
  padding: 12rpx;
}

.title {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.goods-tag {
  display: inline-block;
  margin-bottom: 1rpx;
  padding: 0 12rpx;
  height: 33rpx;
  color: #FFE5BD;
  font-size: 18rpx;
  line-height: 33rpx;
  font-weight: 500;
  text-align: center;
  vertical-align: text-bottom;
  border-radius: 8rpx;
  background: linear-gradient(90deg, #404A5C 0%, #0F131A 100%);
}

.info-wrap {
  margin-top: 12rpx;
}
.sales-volume {
  color: #888;
  font-size: 22rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.shop-info {
  padding: 18rpx 0 0;
}
.shop-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.shop-name {
  margin: 0 12rpx;
  flex: 1;
  color: #333;
  font-size: 22rpx;
}

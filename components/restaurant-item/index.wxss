.restaurant-item {
  margin-bottom: 30rpx;
  width: 350rpx;
  opacity: 0;
}
.restaurant-item.show {
  opacity: 1;
  transition: opacity .2s ease;
}

.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 32rpx;
  overflow: hidden;
}
.cover {
  width: 350rpx;
}

.type-label {
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  padding: 0 12rpx;
  height: 34rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
  background: #FFC400;
}

.address-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.address-icon {
  margin-right: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.address-detail {
  flex: 1;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
}

.restaurant-title {
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.label-list {
  display: flex;
  margin-top: 10rpx;
  padding: 0 10rpx;
}
.label {
  margin-right: 10rpx;
  padding: 2rpx 10rpx;
  max-width: 170rpx;
  color: #999;
  color: var(--theme-color);
  font-size: 20rpx;
  background: #ebf2fd;
  border-radius: 10rpx;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #888;
  font-size: 22rpx;
}
.price {
  line-height: 1;
}

.video-item {
  margin-bottom: 30rpx;
  width: 350rpx;
}
.cover-wrap {
  position: relative;
  font-size: 0;
  border-radius: 18rpx;
  overflow: hidden;
}
.cover {
  width: 350rpx;
}

.video-symbol {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.68);
}
.video-icon {
  width: 20rpx;
  height: 20rpx;
}

.address-info {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 16rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.address-icon {
  margin-right: 2rpx;
  width: 30rpx;
  height: 30rpx;
}
.address-detail {
  flex: 1;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
}
.title {
  margin-top: 12rpx;
  padding: 0 10rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.info-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 0 10rpx;
  color: #666;
  font-size: 22rpx;
}
.author-info {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
  flex: 1;
}
.avatar {
  margin-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.name {
  flex: 1;
}
.praise-info {
  display: flex;
  align-items: center;
}
.praise-icon {
  margin-right: 4rpx;
  width: 26rpx;
  height: 24rpx;
}

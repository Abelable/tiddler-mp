.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.hotel-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  font-size: 0;
  border-bottom: 1px solid #f5f6f8;
}
.hotel-item.is-last {
  border-bottom: none;
}

.cover {
  width: 220rpx;
  height: 280rpx;
  border-radius: 24rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
  height: 280rpx;
}
.title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.desc {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}

.data-wrap {
  display: flex;
  align-items: baseline;
  margin-top: 16rpx;
  line-height: 1;
}
.score {
  position: relative;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: -2rpx;
}
.score::after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 8rpx;
  content: '';
  background: var(--blue-2);
  opacity: 0.6;
}
.other-data {
  margin-left: 20rpx;
  color: #666;
  font-size: 22rpx;
}
.data-num {
  color: #333;
  font-weight: bold;
}

.position-wrap {
  display: flex;
  margin-top: 10rpx;
  color: #666;
  font-size: 22rpx;
}
.position-icon {
  margin-top: 6rpx;
  margin-right: 6rpx;
  width: 20rpx;
  height: 20rpx;
}
.position-content {
  flex: 1;
}

.labels {
  display: flex;
  margin-top: 10rpx;
}
.label {
  margin-right: 10rpx;
  color: var(--blue-1);
  font-size: 18rpx;
  background: #ebf2fd;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.price-info {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  flex: 1;
}
.sales {
  color: #666;
  font-size: 20rpx;
}
.price {
  color: #999;
  font-size: 20rpx;
  line-height: 1;
}
.num {
  font-weight: bold;
}

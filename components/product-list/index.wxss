.product-list {
  margin-bottom: 24rpx;
  padding: 0 24rpx;
  height: 136rpx;
}
.product-list.show-dots {
  margin-bottom: 0;
  height: 178rpx;
}
.product-item {
  padding: 16rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}
.product-image-wrap {
  position: relative;
  font-size: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.product-image {
  width: 100%;
  height: 100%;
}
.type-tag {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 8rpx;
  height: 30rpx;
  color: #fff;
  font-size: 18rpx;
  line-height: 1;
  border-bottom-right-radius: 6rpx;
  background: rgba(0, 0, 0, 0.6);
}
.product-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
  flex: 1;
  height: 100rpx;
}
.product-name {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.free-tips,
.sales-volumns {
  color: #999;
  font-size: 22rpx;
}
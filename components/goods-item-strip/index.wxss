.row {
  display: flex;
  align-items: center;
}
.row.center {
  justify-content: center;
}
.row.between {
  justify-content: space-between;
}
.row.around {
  justify-content: space-around;
}
.row.end {
  justify-content: flex-end;
}
.row.baseline {
  align-items: baseline;
}
.row.top {
  align-items: flex-start;
}
.row.bottom {
  align-items: flex-end;
}

.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.omit.single {
  -webkit-line-clamp: 1;
}

.goods-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f6f8;
}

.goods-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
}

.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  flex: 1;
  height: 180rpx;
}

.goods-title {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.self-support-tag {
  margin-right: 4rpx;
  margin-bottom: 4rpx;
  vertical-align: bottom;
  width: 80rpx;
  height: 28rpx;
}

.info-wrap {
  margin-top: 12rpx;
}
.sales-volume {
  color: #888;
  font-size: 22rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
